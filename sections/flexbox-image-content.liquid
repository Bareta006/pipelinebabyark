<style>
  /* Scoped Section Styling */
  #section-{{ section.id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    width: 100%;
    height: auto; /* Set dynamically via Shopify settings */
    overflow: hidden;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  #section-{{ section.id }}.desktop {
    height: {{ section.settings.section_height }};
    background-image: url({{ section.settings.desktop_image | img_url: 'master' }});
  }

  #section-{{ section.id }}.mobile {
    height: auto; /* Adjusted for mobile layouts */
    background-image: url({{ section.settings.mobile_image | img_url: 'master' }});
  }

  /* Two-column flex layout */
  #section-{{ section.id }} .flex-container {
    display: flex;
    justify-content: space-between;
    align-items: stretch;
    height: 100%;
    width: 100%;
  }

  #section-{{ section.id }} .flex-column {
    display: flex;
    flex: 1;
    position: relative;
    flex-direction: column;
    padding: 20px;
  }

  #section-{{ section.id }} .content-box {
    display: flex;
    flex-direction: column;
    justify-content: {{ section.settings.box_justify_content }};
    align-items: {{ section.settings.box_align_items }};
    padding: 15px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 10px;
    text-align: center;
  }

  #section-{{ section.id }} .content-box h3 {
    margin-bottom: 10px;
    font-size: 20px;
    font-weight: bold;
  }

  #section-{{ section.id }} .content-box p {
    font-size: 16px;
    margin-bottom: 15px;
  }

  #section-{{ section.id }} .content-box button {
    padding: 10px 20px;
    border: 2px solid #000;
    background: transparent;
    color: #000;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
  }

  #section-{{ section.id }} .content-box button:hover {
    background: #000;
    color: #fff;
  }

  /* Mobile Layout */
  @media (max-width: 768px) {
    #section-{{ section.id }} .flex-container {
      flex-direction: column;
    }

    #section-{{ section.id }} .flex-column {
      display: none; /* Hide desktop columns */
    }

    #section-{{ section.id }} .mobile-content-box {
      display: flex;
      flex-direction: column;
      padding: 20px;
      background: rgba(255, 255, 255, 0.8);
      border-radius: 10px;
      text-align: center;
    }
  }
</style>


<section id="section-{{ section.id }}" 
         class="desktop {{ section.settings.background_position }}">
  <div class="flex-container">
    <!-- Left Column -->
    <div class="flex-column">
      <div class="content-box">
        {% if section.settings.left_box_kicker %}
          <div class="kicker">{{ section.settings.left_box_kicker }}</div>
        {% endif %}
        {% if section.settings.left_box_title %}
          <h3>{{ section.settings.left_box_title }}</h3>
        {% endif %}
        {% if section.settings.left_box_text %}
          <p>{{ section.settings.left_box_text }}</p>
        {% endif %}
        {% if section.settings.left_box_button_text %}
          <button>{{ section.settings.left_box_button_text }}</button>
        {% endif %}
      </div>
    </div>

    <!-- Right Column -->
    <div class="flex-column">
      <div class="content-box">
        {% if section.settings.right_box_kicker %}
          <div class="kicker">{{ section.settings.right_box_kicker }}</div>
        {% endif %}
        {% if section.settings.right_box_title %}
          <h3>{{ section.settings.right_box_title }}</h3>
        {% endif %}
        {% if section.settings.right_box_text %}
          <p>{{ section.settings.right_box_text }}</p>
        {% endif %}
        {% if section.settings.right_box_button_text %}
          <button>{{ section.settings.right_box_button_text }}</button>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Mobile Layout -->
  <div class="mobile-content-box">
    {% if section.settings.mobile_kicker %}
      <div class="kicker">{{ section.settings.mobile_kicker }}</div>
    {% endif %}
    {% if section.settings.mobile_title %}
      <h3>{{ section.settings.mobile_title }}</h3>
    {% endif %}
    {% if section.settings.mobile_text %}
      <p>{{ section.settings.mobile_text }}</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Background Image Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Background Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Background Image"
    },
    {
      "type": "select",
      "id": "section_height",
      "label": "Section Height",
      "options": [
        { "value": "500px", "label": "500px" },
        { "value": "650px", "label": "650px" },
        { "value": "750px", "label": "750px" },
        { "value": "100vh", "label": "Full Screen (100vh)" }
      ],
      "default": "750px"
    },
    {
      "type": "text",
      "id": "left_box_kicker",
      "label": "Left Box Kicker"
    },
    {
      "type": "text",
      "id": "left_box_title",
      "label": "Left Box Title"
    },
    {
      "type": "textarea",
      "id": "left_box_text",
      "label": "Left Box Text"
    },
    {
      "type": "text",
      "id": "left_box_button_text",
      "label": "Left Box Button Text"
    },
    {
      "type": "text",
      "id": "right_box_kicker",
      "label": "Right Box Kicker"
    },
    {
      "type": "text",
      "id": "right_box_title",
      "label": "Right Box Title"
    },
    {
      "type": "textarea",
      "id": "right_box_text",
      "label": "Right Box Text"
    },
    {
      "type": "text",
      "id": "right_box_button_text",
      "label": "Right Box Button Text"
    },
    {
      "type": "text",
      "id": "mobile_kicker",
      "label": "Mobile Kicker"
    },
    {
      "type": "text",
      "id": "mobile_title",
      "label": "Mobile Title"
    },
    {
      "type": "textarea",
      "id": "mobile_text",
      "label": "Mobile Text"
    },
    
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "default": 40,
      "min": 0,
      "max": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "default": 40,
      "min": 0,
      "max": 100
    }
  ],
  "presets": [
    {
      "name": "Background Image Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}