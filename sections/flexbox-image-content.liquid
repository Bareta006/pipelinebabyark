<style>
  /* General Section Styling */
  #section-{{ section.id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    width: 100%;
    overflow: hidden;
  }

  /* Section height and padding */
  #section-{{ section.id }}.desktop {
    height: {{ section.settings.section_height }};
    background-image: url({{ section.settings.desktop_image | img_url: 'master' }});
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  #section-{{ section.id }}.mobile {
    height: auto;
    background-image: url({{ section.settings.mobile_image | img_url: 'master' }});
  }

  /* Two-column layout for desktop */
  #section-{{ section.id }} .flex-container {
    display: flex;
    justify-content: space-between;
    align-items: stretch;
    width: 100%;
    height: 100%;
  }

  #section-{{ section.id }} .flex-column {
    display: flex;
    flex: 1;
    flex-direction: column;
    padding: 20px;
  }

  /* Content box styling */
  #section-{{ section.id }} .content-box {
    display: flex;
    flex-direction: column;
    justify-content: center; /* Defaults to center; controlled by editor */
    align-items: center; /* Defaults to center; controlled by editor */
    padding: 15px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 10px;
    text-align: center;
  }

  #section-{{ section.id }} .content-box h3 {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 10px;
  }

  #section-{{ section.id }} .content-box p {
    font-size: 16px;
    margin-bottom: 15px;
  }

  #section-{{ section.id }} .content-box button {
    padding: 10px 20px;
    border: 2px solid #000;
    background: transparent;
    color: #000;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
  }

  #section-{{ section.id }} .content-box button:hover {
    background-color: #000;
    color: #fff;
  }

  /* Mobile-specific content box */
  #section-{{ section.id }} .mobile-content-box {
    display: none;
    flex-direction: column;
    padding: 20px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 10px;
    text-align: center;
  }

  /* Responsive Design for Mobile */
  @media (max-width: 768px) {
    #section-{{ section.id }}.desktop {
      display: none;
    }

    #section-{{ section.id }}.mobile {
      display: flex;
      height: auto;
    }

    #section-{{ section.id }} .flex-container {
      flex-direction: column;
    }

    #section-{{ section.id }} .flex-column {
      display: none; /* Hide desktop columns */
    }

    #section-{{ section.id }} .mobile-content-box {
      display: flex;
    }
  }
</style>


<section id="section-{{ section.id }}" 
         class="desktop {{ section.settings.background_position }}">
  <div class="flex-container">
    <!-- Left Column -->
    <div class="flex-column">
      <div class="content-box" style="justify-content: {{ section.settings.left_box_justify }}; align-items: {{ section.settings.left_box_align }}; color: {{ section.settings.left_box_text_color }};">
        {% if section.settings.left_box_kicker %}
          <div class="kicker">{{ section.settings.left_box_kicker }}</div>
        {% endif %}
        {% if section.settings.left_box_title %}
          <h3>{{ section.settings.left_box_title }}</h3>
        {% endif %}
        {% if section.settings.left_box_text %}
          <p>{{ section.settings.left_box_text }}</p>
        {% endif %}
        {% if section.settings.left_box_button_html %}
          <a href="{{ section.settings.left_box_button_link }}" class="button">
            {{ section.settings.left_box_button_html | html }}
          </a>
        {% endif %}
      </div>
    </div>

    <!-- Right Column -->
    <div class="flex-column">
      <div class="content-box" style="justify-content: {{ section.settings.right_box_justify }}; align-items: {{ section.settings.right_box_align }}; color: {{ section.settings.right_box_text_color }};">
        {% if section.settings.right_box_kicker %}
          <div class="kicker">{{ section.settings.right_box_kicker }}</div>
        {% endif %}
        {% if section.settings.right_box_title %}
          <h3>{{ section.settings.right_box_title }}</h3>
        {% endif %}
        {% if section.settings.right_box_text %}
          <p>{{ section.settings.right_box_text }}</p>
        {% endif %}
        {% if section.settings.right_box_button_html %}
          <a href="{{ section.settings.right_box_button_link }}" class="button">
            {{ section.settings.right_box_button_html }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Mobile Content Box -->
  <div class="mobile-content-box">
    {% if section.settings.mobile_kicker %}
      <div class="kicker">{{ section.settings.mobile_kicker }}</div>
    {% endif %}
    {% if section.settings.mobile_title %}
      <h3>{{ section.settings.mobile_title }}</h3>
    {% endif %}
    {% if section.settings.mobile_text %}
      <p>{{ section.settings.mobile_text }}</p>
    {% endif %}
    {% if section.settings.mobile_button_html %}
      <a href="{{ section.settings.mobile_button_link }}" class="button">
        {{ section.settings.mobile_button_html }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  {
  "name": "Background Image Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Background Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Background Image"
    },
    {
      "type": "select",
      "id": "section_height",
      "label": "Section Height",
      "options": [
        { "value": "500px", "label": "500px" },
        { "value": "650px", "label": "650px" },
        { "value": "750px", "label": "750px" },
        { "value": "100vh", "label": "Full Screen (100vh)" }
      ],
      "default": "750px"
    },
    {
      "type": "textarea",
      "id": "left_box_button_html",
      "label": "Left Button Text (HTML)"
    },
    {
      "type": "url",
      "id": "left_box_button_link",
      "label": "Left Button Link"
    },
    {
      "type": "textarea",
      "id": "right_box_button_html",
      "label": "Right Button Text (HTML)"
    },
    {
      "type": "url",
      "id": "right_box_button_link",
      "label": "Right Button Link"
    },
    {
      "type": "color",
      "id": "left_box_text_color",
      "label": "Left Box Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "right_box_text_color",
      "label": "Right Box Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "mobile_text_color",
      "label": "Mobile Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "default": 40,
      "min": 0,
      "max": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "default": 40,
      "min": 0,
      "max": 100
    }
  ]
}

}
{% endschema %}