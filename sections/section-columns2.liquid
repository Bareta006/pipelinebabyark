<div class="section-columns2 {{ section.settings.bg }} {% if section.settings.show_mobile_arrows %}show-mobile-arrows{% endif %}"
  data-section-id="{{ section.id }}"
  data-section-type="section-columns2"
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
  <div class="{{ section.settings.width }} section-padding">
    {% if section.settings.title != blank %}
      <h2 class="section__title mb-r11">{{ section.settings.title | escape }}</h2>
    {% endif %}
    <flickity-carousel>
      <div
        data-carousel
        data-grid
        data-grid-flex
        data-grid-large
        data-grid-medium
        data-grid-small
        data-custom-scrollbar-items
        data-options='{"pageDots": false, "prevNextButtons": true, "wrapAround": false, "contain": true, "cellAlign": "left", "freeScroll": false}'
        style="
          --grid-large-items: {{ section.settings.grid_large }};
          --grid-medium-items: {{ section.settings.grid_medium }};
          --grid-small-items: {{ section.settings.grid_mobile }};">
        {% for block in section.blocks %}
        <div
          class="index__column grid__item slide-item {{ section.settings.align_text }}"
          data-carousel-slide
          data-item
          {{ block.shopify_attributes }}>
          {% if block.settings.enable_image or block.settings.enable_video %}
            <div class="column__media" data-grid-slide>
              {% if block.settings.enable_video %}
                {% comment %} Video Media {% endcomment %}
                {% if block.settings.video_file != blank %}
                  {% comment %} Native Shopify Video {% endcomment %}
                  <div class="column__video-wrapper">
                    {{ block.settings.video_file | video_tag: 
                      controls: block.settings.show_video_controls, 
                      autoplay: block.settings.video_autoplay, 
                      loop: block.settings.video_loop, 
                      muted: block.settings.video_autoplay,
                      playsinline: true,
                      preload: 'metadata',
                      class: 'column__video-native'
                    }}
                  </div>
                {% elsif block.settings.video_url != blank %}
                  {% comment %} External Video (YouTube/Vimeo) {% endcomment %}
                  <div class="column__video-wrapper">
                    {% if block.settings.video_url contains 'youtube' or block.settings.video_url contains 'youtu.be' %}
                      {% assign video_id = block.settings.video_url | split: 'v=' | last | split: '&' | first %}
                      {% if block.settings.video_url contains 'youtu.be' %}
                        {% assign video_id = block.settings.video_url | split: '.be/' | last | split: '?' | first %}
                      {% endif %}
                      <iframe 
                        src="https://www.youtube.com/embed/{{ video_id }}?{% if block.settings.video_autoplay %}autoplay=1&mute=1&{% endif %}rel=0&controls={% if block.settings.show_video_controls %}1{% else %}0{% endif %}"
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen
                        class="column__video-iframe">
                      </iframe>
                    {% elsif block.settings.video_url contains 'vimeo' %}
                      {% assign video_id = block.settings.video_url | split: 'vimeo.com/' | last | split: '?' | first %}
                      <iframe 
                        src="https://player.vimeo.com/video/{{ video_id }}?{% if block.settings.video_autoplay %}autoplay=1&muted=1&{% endif %}controls={% if block.settings.show_video_controls %}1{% else %}0{% endif %}"
                        frameborder="0"
                        allow="autoplay; fullscreen; picture-in-picture"
                        allowfullscreen
                        class="column__video-iframe">
                      </iframe>
                    {% endif %}
                  </div>
                {% endif %}
              {% elsif block.settings.enable_image %}
                {% comment %} Image Media {% endcomment %}
                {%- capture sizes -%}
                  {%- render 'image-grid-sizes',
                    columns_desktop: section.settings.grid_large,
                    columns_tablet: section.settings.grid_large,
                    columns_mobile: section.settings.grid_mobile,
                    section_width: section.settings.width
                  %}
                {%- endcapture -%}

                {%- capture srcset -%}
                  {%- render 'image-grid-srcset',
                    image: block.settings.image,
                    columns_desktop: section.settings.grid_large,
                    columns_tablet: section.settings.grid_large,
                    columns_mobile: section.settings.grid_mobile,
                    section_width: section.settings.width
                  %}
                {%- endcapture -%}

                {%- if section.settings.scale_image -%}
                  {%- render 'image', cover: true, img_object: block.settings.image, srcset: srcset, sizes: sizes, loading: 'lazy', class: block.settings.shape_class, wh_ratio: section.settings.wh_ratio -%}
                {%- else -%}
                  {%- render 'image', cover: true, img_object: block.settings.image, srcset: srcset, sizes: sizes, loading: 'lazy', class: block.settings.shape_class -%}
                {%- endif -%}
              {% endif %}
              
              {% comment %} Video Popup (only if enable_video_popup is checked) {% endcomment %}
              {%- if block.settings.enable_video_popup -%}
                <div class="{{ block.settings.video_button_color }}">
                  {%- render 'video-popup', video: block.settings.video_popup_link, unique: block.id -%}
                </div>
              {%- elsif block.settings.button_label == blank and block.settings.button_link != blank -%}
                <a class="link-over-image" href="{{ block.settings.button_link }}" aria-label="{{ block.settings.title | strip_html | escape }}"></a>
              {%- endif -%}
            </div>
          {% endif %}
          {% if block.settings.title != blank %}
            <div class="accent-title-large strong mb-r4">{{ block.settings.title | escape }}</div>
          {% endif %}
          {% if block.settings.text != blank %}
            <div class="rte body-size-4 text-left">{{ block.settings.text }}</div>
          {% endif %}
          {% if block.settings.button_label != blank and block.settings.button_link != blank %}
            <a href="{{ block.settings.button_link }}" class="{{ block.settings.button_color }} {{ block.settings.button_style }}">
              {{ block.settings.button_label | escape }}
            </a>
          {% endif %}
        </div>
      {% endfor %}
      </div>
    </flickity-carousel>
    {%- if section.settings.progress_bar_mobile -%}
      <div class="custom-scrollbar small-down--show" data-custom-scrollbar>
        <div class="custom-scrollbar__track" data-custom-scrollbar-track></div>
      </div>
    {%- endif -%}

    {% if section.blocks.size == 0 %}
      <div class="text-center">{{ 'home_page.onboarding.no_content' | t }}</div>
    {% endif %}
  </div>
</div>

<style>
  /* Column Media Container */
  #shopify-section-{{ section.id }} .column__media {
    position: relative;
    margin-bottom: 1.5rem;
  }

  /* Video Wrapper */
  #shopify-section-{{ section.id }} .column__video-wrapper {
    width: 100%;
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background-color: #000;
  }

  #shopify-section-{{ section.id }} .column__video-native {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  #shopify-section-{{ section.id }} .column__video-iframe {
    width: 100%;
    height: 100%;
    aspect-ratio: 16/9;
    border: none;
    display: block;
  }

  /* Scale video when scale_image is enabled */
  #shopify-section-{{ section.id }} .column__video-wrapper.scaled-video {
    aspect-ratio: var(--wh-ratio, 1);
  }

  #shopify-section-{{ section.id }} .column__video-wrapper.scaled-video .column__video-native,
  #shopify-section-{{ section.id }} .column__video-wrapper.scaled-video .column__video-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
#shopify-section-{{ section.id }} .accent-title-large{
    font-family: "centrano2";
    font-weight: 400;
    font-style: normal;
    letter-spacing: 0;
    text-transform: none;
    font-size: 32px; 
    text-align: left;
}
    #shopify-section-{{ section.id }} .rte p{
    font-size: 20px;
    line-height: 1.4;
    text-align: left;
}
  /* Mobile Responsive */
  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .column__media {
      margin-bottom: 1rem;
    }
    #shopify-section-{{ section.id }} .accent-title-large{
    font-family: "centrano2";
    font-weight: 400;
    font-style: normal;
    letter-spacing: 0;
    text-transform: none;
    font-size: 24px;    
    line-height: 1.2;
}
 #shopify-section-{{ section.id }} .rte p{
    font-size: 16px;
    line-height: 1.4;
    text-align: left;
}
  }

  /* Flickity Navigation Arrows */
  #shopify-section-{{ section.id }} .flickity-button {
    position: absolute;
    bottom: -4.125rem;
    top: auto;
    z-index: 10;
    width: 2.5rem;
    height: 2.5rem;
    border: 1px solid var(--color-border);
    background-color: var(--color-bg-light);
    border-radius: 50%;
    margin: 0rem;
    border: 1px solid; 
    color: #000;
  }

  #shopify-section-{{ section.id }} .flickity-button:hover {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-white);
  }



  #shopify-section-{{ section.id }} .flickity-prev-next-button.previous {
    right: 3.75rem;
    left: auto;
  }

  #shopify-section-{{ section.id }} .flickity-prev-next-button.next {
    right: 0.625rem;
  }

  /* Desktop - hide arrows */
  @media (min-width: 750px) {
    #shopify-section-{{ section.id }} .flickity-button {
      display: none;
    }
  }

  /* Mobile */
  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .flickity-prev-next-button.previous {
      right: 4rem;
    }

    #shopify-section-{{ section.id }} .flickity-prev-next-button.next {
      right: 1rem;
    }

    #shopify-section-{{ section.id }} .flickity-button {
      bottom: -1.125rem;
    }

    /* Hide arrows if not enabled */
    #shopify-section-{{ section.id }} > div:not(.show-mobile-arrows) .flickity-button {
      display: none;
    }
    #shopify-section-{{ section.id }} flickity-carousel > div {
        padding-bottom: 2rem;
    }
  }
</style>

