  /* Flickity Navigation Arrows */
  #shopify-section-{{ section.id }} .flickity-button {
    position: absolute;
    bottom: -4.125rem;
    top: auto;
    z-index: 10;
    width: 2.5rem;
    height: 2.5rem;
    border: 1px solid var(--color-border);
    background-color: var(--color-bg-light);
    border-radius: 50%;
    margin: 0rem;
    border: 1px solid; 
    color: #000;
  }

  #shopify-section-{{ section.id }} .flickity-button:hover {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-white);
  }



  #shopify-section-{{ section.id }} .flickity-prev-next-button.previous {
    right: 3.75rem;
    left: auto;
  }

  #shopify-section-{{ section.id }} .flickity-prev-next-button.next {
    right: 0.625rem;
  }

  /* Desktop - Grid Layout (No Carousel) */
  @media (min-width: 750px) {
    #shopify-section-{{ section.id }} .flickity-button {
      display: none;
    }

    /* Disable Flickity carousel on desktop - use flexbox grid instead */
    #shopify-section-{{ section.id }} flickity-carousel {
      display: block;
    }

    #shopify-section-{{ section.id }} flickity-carousel .flickity-viewport {
      display: block !important;
      height: auto !important;
      overflow: visible !important;
    }

    #shopify-section-{{ section.id }} flickity-carousel .flickity-slider {
      display: flex !important;
      flex-wrap: wrap !important;
      justify-content: center !important;
      gap: 1.5rem !important;
      width: 100% !important;
      transform: none !important;
      position: relative !important;
      left: 0 !important;
    }

    /* Calculate width accounting for gaps: (100% - (gaps)) / columns */
    #shopify-section-{{ section.id }} flickity-carousel .index__column {
      flex: 0 0 calc((100% - (1.5rem * ({{ section.settings.grid_large }} - 1))) / {{ section.settings.grid_large }}) !important;
      max-width: calc((100% - (1.5rem * ({{ section.settings.grid_large }} - 1))) / {{ section.settings.grid_large }}) !important;
      min-width: 0 !important;
      position: relative !important;
      left: auto !important;
      transform: none !important;
      margin-left: 0 !important;
    }
