<script>
  (function() {
     const section = document.getElementById('shopify-section-{{ section.id }}');
     
     if (!section) return;
     
     const carousel = section.querySelector('[data-carousel]');
    
    // Function to equalize slide heights
    function equalizeSlideHeights() {
      const allSlides = carousel.querySelectorAll('.fullwidth-card-slide');
      if (!allSlides.length) return;
      
      const isMobile = window.innerWidth < 750;
      
      if (isMobile) {
        // MOBILE: Equalize MEDIA heights only (not full card)
        // Reset card heights
        allSlides.forEach(slide => {
          const card = slide.querySelector('.fullwidth-card');
          if (card) card.style.height = '';
        });
        
        setTimeout(() => {
          // Find first slide with image (skip videos if they don't have proper height)
          let targetMedia = null;
          let targetMediaHeight = 0;
          
          for (let i = 0; i < allSlides.length; i++) {
            const slide = allSlides[i];
            const imageWrapper = slide.querySelector('.fullwidth-card__image-mobile');
            const videoWrapper = slide.querySelector('.fullwidth-card__video-mobile');
            
            // Prefer image over video for reliable dimensions
            if (imageWrapper) {
              const height = imageWrapper.offsetHeight;
              if (height > 0) {
                targetMedia = imageWrapper;
                targetMediaHeight = height;
                break;
              }
            } else if (videoWrapper && !targetMedia) {
              // Fallback to video if no image found yet
              const height = videoWrapper.offsetHeight;
              if (height > 0) {
                targetMedia = videoWrapper;
                targetMediaHeight = height;
              }
            }
          }
          
          if (targetMedia && targetMediaHeight > 0) {
            // Apply to ALL slides' media wrappers
            allSlides.forEach(slide => {
              const videoWrapper = slide.querySelector('.fullwidth-card__video-mobile');
              const imageWrapper = slide.querySelector('.fullwidth-card__image-mobile');
              
              if (videoWrapper) {
                videoWrapper.style.height = targetMediaHeight + 'px';
              }
              if (imageWrapper) {
                imageWrapper.style.height = targetMediaHeight + 'px';
              }
            });
          }
        }, 100);
        
      } else {
        // DESKTOP: Equalize full card heights
        allSlides.forEach(slide => {
          const card = slide.querySelector('.fullwidth-card');
          if (card) card.style.height = '';
        });
        
        setTimeout(() => {
          // Find first slide with image (skip videos if they don't have proper height)
          let targetCard = null;
          let targetHeight = 0;
          
          for (let i = 0; i < allSlides.length; i++) {
            const slide = allSlides[i];
            const card = slide.querySelector('.fullwidth-card');
            const hasImage = card && (card.querySelector('.fullwidth-card__image-desktop') || card.querySelector('.fullwidth-card__image-mobile'));
            
            if (card) {
              const height = card.offsetHeight;
              // Prefer cards with images, but accept any card with valid height
              if (height > 0) {
                if (hasImage || !targetCard) {
                  targetCard = card;
                  targetHeight = height;
                  if (hasImage) break; // Found image card, use it
                }
              }
            }
          }
          
          if (targetCard && targetHeight > 0) {
            allSlides.forEach(slide => {
              const card = slide.querySelector('.fullwidth-card');
              if (card) {
                card.style.height = targetHeight + 'px';
              }
            });
          }
        }, 100);
      }
    }
    
     // Ensure all videos are muted
     function ensureAllVideosMuted() {
       const allVideos = section.querySelectorAll('.fullwidth-card__video');
       allVideos.forEach(v => {
         if (v) {
           v.muted = true;
           v.setAttribute('muted', '');
           v.setAttribute('playsinline', '');
         }
       });
     }
     
     // Initialize
     function init() {
       // Ensure all videos are muted on init
       ensureAllVideosMuted();
       
       // Equalize slide heights
       equalizeSlideHeights();
     }
    
     // Wait for DOM ready
     if (document.readyState === 'loading') {
       document.addEventListener('DOMContentLoaded', init);
     } else {
       init();
     }
     
     // Re-equalize on window resize
     let resizeTimeout;
     window.addEventListener('resize', () => {
       clearTimeout(resizeTimeout);
       resizeTimeout = setTimeout(equalizeSlideHeights, 200);
     });
     
     // Re-equalize when images load
     const images = section.querySelectorAll('img');
     images.forEach(img => {
       if (img.complete) {
         equalizeSlideHeights();
       } else {
         img.addEventListener('load', equalizeSlideHeights);
       }
     });
   })();
 </script>

{% schema %}
{
  "name": "Fullwidth Card Slider",
  "class": "section-fullwidth-card-slider",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Cards"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Section Description",
      "default": "<p>Explore our amazing collection of featured content.</p>"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Title Alignment",
      "default": "text-center",
      "options": [
        { "value": "text-left", "label": "Left" },
        { "value": "text-center", "label": "Centered" },
        { "value": "text-right", "label": "Right" }
      ]
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 1,
      "max": 15,
      "step": 1,
      "label": "Title Size",
      "default": 8
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 1,
      "max": 15,
      "step": 1,
      "label": "Description Size",
      "default": 5
    },
    {
      "type": "header",
      "content": "Card Content"
    },
    {
      "type": "range",
      "id": "card_title_size",
      "min": 1,
      "max": 15,
      "step": 1,
      "label": "Card Title Size",
      "default": 9
    },
    {
      "type": "range",
      "id": "card_description_size",
      "min": 1,
      "max": 15,
      "step": 1,
      "label": "Card Description Size",
      "default": 6
    },
    {
      "type": "header",
      "content": "Grid"
    },
    {
      "type": "range",
      "id": "grid_large",
      "min": 1,
      "max": 4,
      "step": 0.1,
      "label": "Desktop items in view",
      "default": 1.2
    },
    {
      "type": "range",
      "id": "grid_medium",
      "min": 1,
      "max": 3,
      "step": 0.1,
      "label": "Tablet items in view",
      "default": 1.1
    },
    {
      "type": "range",
      "id": "grid_mobile",
      "min": 1,
      "max": 3,
      "step": 0.1,
      "label": "Mobile items in view",
      "default": 1
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Section height",
      "default": "use_pixels_500",
      "options": [
        { "value": "use_screen_full", "label": "Full screen height"},
        { "value": "use_screen_three_quarters", "label": "Three quarters of screen height"},
        { "value": "use_screen_two_thirds", "label": "Two thirds of screen height"},
        { "value": "use_screen_one_half", "label": "One half of screen height"},
        { "value": "use_screen_one_third", "label": "One third of screen height"},
        { "value": "use_screen_one_fifth", "label": "One fifth of screen height"},
        { "value": "use_pixels_800", "label": "800px" },
        { "value": "use_pixels_650", "label": "650px" },
        { "value": "use_pixels_500", "label": "500px" },
        { "value": "use_image", "label": "Image height"}
      ]
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text color",
      "default": "text--neutral",
      "options": [
        { "value": "text--neutral", "label": "Normal text"},
        { "value": "text--white", "label": "White"},
        { "value": "text--primary", "label": "Primary accent"},
        { "value": "text--secondary", "label": "Secondary accent"},
        { "value": "text--black", "label": "Black"},
        { "value": "text--invert--primary", "label": "Primary dark accent"},
        { "value": "text--invert--secondary", "label": "Secondary dark accent"},
        { "value": "text--invert", "label": "Inverted text color"},
        { "value": "text--bright--primary", "label": "Primary bright accent"},
        { "value": "text--bright--secondary", "label": "Secondary bright accent"}
      ]
    },
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "checkbox",
      "id": "mobile_text_overlay",
      "label": "Overlay text on mobile",
      "info": "When enabled, text will overlay the image on mobile instead of appearing below it",
      "default": false
    },
    {
      "type": "header",
      "content": "Section spacing"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper",
      "options": [
        { "value": "wrapper--none", "label": "Full width" },
        { "value": "wrapper--full", "label": "Full width padded" },
        { "value": "wrapper", "label": "Page width" },
        { "value": "wrapper--narrow", "label": "Page width narrow" },
        { "value": "wrapper--tiny", "label": "Page width extra narrow" }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "header",
          "content": "Media (Choose Image OR Video)"
        },
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Image",
          "info": "Used if no video is uploaded"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image",
          "info": "If not provided, desktop image will be used"
        },
        {
          "type": "video",
          "id": "desktop_video",
          "label": "Desktop Video (Shopify Upload)",
          "info": "Upload video file - takes priority over desktop image. Will autoplay when slide is active."
        },
        {
          "type": "video",
          "id": "mobile_video",
          "label": "Mobile Video (Shopify Upload)",
          "info": "If not provided, desktop video will be used. Autoplays when slide is active."
        },
        {
          "type": "header",
          "content": "Overlay"
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "label": "Overlay Opacity",
          "info": "Increase contrast for legible text",
          "min": 0,
          "max": 100,
          "step": 5,
          "unit": "%",
          "default": 15
        },
        {
          "type": "color",
          "id": "overlay_color",
          "label": "Overlay Color",
          "default": "#000000"
        },
        {
          "type": "checkbox",
          "id": "enable_overlay_text",
          "label": "Overlay behind text only",
          "default": false
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "checkbox",
          "id": "full_height_content",
          "label": "Full height content",
          "info": "Makes content area 100% height of the card",
          "default": false
        },
        {
          "type": "color",
          "id": "content_bg_color",
          "label": "Content Background Color",
          "info": "Background color for the content area"
        },
        {
          "type": "color",
          "id": "mobile_card_bg_color",
          "label": "Mobile Card Background Color",
          "info": "Background color for the entire card on mobile"
        },
        {
          "type": "text",
          "id": "badge_text",
          "label": "Badge Text",
          "info": "Text displayed above the title"
        },
        {
          "type": "color",
          "id": "badge_bg_color",
          "label": "Badge Background Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "badge_text_color",
          "label": "Badge Text Color",
          "default": "#ffffff"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Card Title",
          "default": "Card Title"
        },
        {
          "type": "color",
          "id": "title_color_desktop",
          "label": "Title Color (Desktop)",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "title_color_mobile",
          "label": "Title Color (Mobile)",
          "default": "#ffffff"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Card Description",
          "default": "<p>This is a description for this card item.</p>"
        },
        {
          "type": "color",
          "id": "description_color_desktop",
          "label": "Description Color (Desktop)",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "description_color_mobile",
          "label": "Description Color (Mobile)",
          "default": "#ffffff"
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "Text Alignment",
          "default": "align--bottom-left",
          "options": [
            { "value": "align--top-left", "label": "Top left"},
            { "value": "align--top-center", "label": "Top center"},
            { "value": "align--top-right", "label": "Top right"},
            { "value": "align--middle-left", "label": "Middle left"},
            { "value": "align--middle-center", "label": "Absolute center"},
            { "value": "align--middle-right", "label": "Middle right"},
            { "value": "align--bottom-left", "label": "Bottom left"},
            { "value": "align--bottom-center", "label": "Bottom center"},
            { "value": "align--bottom-right", "label": "Bottom right"}
          ]
        },
        {
          "type": "header",
          "content": "Button"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "button_color",
          "label": "Button Color",
          "default": "btn--primary",
          "options": [
            { "value": "btn--primary", "label": "Bright accent" },
            { "value": "btn--secondary", "label": "Secondary accent" },
            { "value": "btn--neutral", "label": "Text color" },
            { "value": "btn--black", "label": "Black" },
            { "value": "btn--white", "label": "White" }
          ]
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button Style",
          "default": "btn",
          "options": [
            { "value": "btn-text-thick-line", "label": "Capitalized text" },
            { "value": "btn", "label": "Solid button"},
            { "value": "btn--soft", "label": "Soft button"},
            { "value": "btn--outline", "label": "Outlined button"}
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Fullwidth Card Slider",
      "category": "Image",
      "blocks": [
        {
          "type": "card",
          "settings": {
            "title": "First Card",
            "description": "<p>This is the description for the first card in our fullwidth slider.</p>",
            "button_text": "Learn More"
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "Second Card", 
            "description": "<p>This is the description for the second card with amazing content.</p>",
            "button_text": "Discover"
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "Third Card",
            "description": "<p>This is the description for the third card showcasing more features.</p>",
            "button_text": "Explore"
          }
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["header","footer","aside"]
  }
}
{% endschema %} 