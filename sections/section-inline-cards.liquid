<!-- /sections/section-inline-cards.liquid -->

{%- assign animation_anchor = "[data-section-id='" | append: section.id | append: "']" -%}
 
<section class="section-inline-cards {{ section.settings.text_color }} {% if section.settings.enable_mobile_carousel %}mobile-carousel-enabled{% endif %}"
  data-section-id="{{ section.id }}"
  data-section-type="inline-cards"
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
  
  <div class="{{ section.settings.width }} section-padding">
    
    <!-- Content Container with Background and Border Radius -->
    <div class="inline-cards-content {{ section.settings.bg }}">
      
      <!-- Section Header --> 
      {% if section.settings.title != blank or section.settings.description != blank %}
        <div class="section__header {{ section.settings.title_alignment }}">
          {% if section.settings.title != blank %}
            <h2 class="section__title heading-size-{{ section.settings.title_size }}">
              {{ section.settings.title }}
            </h2>
          {% endif %}
          
          {% if section.settings.description != blank %}
            <div class="section__description rte body-size-{{ section.settings.description_size }}">
              {{ section.settings.description }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      <!-- Desktop Grid Layout -->
      <div class="desktop-cards-wrapper">
        <div class="cards-container" 
             style="--cards-desktop: {{ section.settings.cards_desktop }}; --cards-tablet: {{ section.settings.cards_tablet }};">
          
          {% for block in section.blocks %}
            <div class="card-item" {{ block.shopify_attributes }}>
              {% render 'inline-card', 
                card_image: block.settings.card_image,
                card_video_file: block.settings.card_video_file,
                card_video_url: block.settings.card_video_url,
                card_title: block.settings.card_title,
                card_description: block.settings.card_description,
                card_title_size: section.settings.card_title_size,
                card_description_size: section.settings.card_description_size,
                text_overlay: block.settings.text_overlay,
                title_color: block.settings.title_color,
                description_color: block.settings.description_color
              %}
            </div>
          {% endfor %}
          
        </div>
      </div>

      {% if section.settings.enable_mobile_carousel %}
        <!-- Mobile Carousel Layout -->
        <div class="mobile-carousel-wrapper">
          <flickity-carousel>
            <div
              data-carousel
              data-grid
              data-grid-large
              data-grid-medium
              data-grid-small
              data-options='{"pageDots": false, "prevNextButtons": true, "wrapAround": false, "contain": true, "cellAlign": "left", "freeScroll": false}'
              class="mobile-carousel" 
              style="--grid-large-items: 1; --grid-medium-items: 1; --grid-small-items: {{ section.settings.mobile_cards_count }};">
              
              {% for block in section.blocks %}
                <div class="mobile-card" data-carousel-slide {{ block.shopify_attributes }}>
                  {% render 'inline-card', 
                    card_image: block.settings.card_image,
                    card_video_file: block.settings.card_video_file,
                    card_video_url: block.settings.card_video_url,
                    card_title: block.settings.card_title,
                    card_description: block.settings.card_description,
                    card_title_size: section.settings.card_title_size,
                    card_description_size: section.settings.card_description_size,
                    text_overlay: block.settings.text_overlay,
                    title_color: block.settings.title_color,
                    description_color: block.settings.description_color
                  %}
                </div>
              {% endfor %}
              
            </div>
          </flickity-carousel>
        </div>
      {% endif %}
      
    </div>
    
  </div>
</section>

<style>
  #shopify-section-{{ section.id }} {
    --card-gap: 2rem;
    --card-aspect-ratio: 1.18;
  }

  /* Content Container */
  #shopify-section-{{ section.id }} .inline-cards-content {
    border-radius: 30px;
    overflow: hidden;
    position: relative;
  }

  /* Section Header */
  #shopify-section-{{ section.id }} .section__header {
    margin-bottom: 3rem;
    padding: 3rem 3rem 0 3rem;
  }
  
  #shopify-section-{{ section.id }} .section__title {
    margin-bottom: 1.5rem;
  }

  /* Cards Wrapper */
  #shopify-section-{{ section.id }} .inline-cards-wrapper {
    position: relative;
    padding: 0 3rem 3rem 3rem;
  }

  /* Cards Container - Flexbox Layout */
  #shopify-section-{{ section.id }} .cards-container {
    display: flex;
    flex-wrap: wrap;
    gap: var(--card-gap);
    width: 100%;
  }

  /* Hide Mobile Carousel on Desktop */
  #shopify-section-{{ section.id }} .mobile-carousel-wrapper {
    display: none;
  }

  /* Individual Card Item */
  #shopify-section-{{ section.id }} .card-item {
    flex: 1 1 calc((100% / var(--cards-desktop)) - (var(--card-gap) * (var(--cards-desktop) - 1) / var(--cards-desktop)));
    min-width: 280px;
    max-width: 100%;
  }

  /* Inline Card Container */
  #shopify-section-{{ section.id }} .inline-card-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
  }

  /* Overlay Mode */
  #shopify-section-{{ section.id }} .inline-card-container--overlay {
    position: relative;
  }

  #shopify-section-{{ section.id }} .inline-card-container--overlay .card-media-wrapper {
    margin-bottom: 0;
  }

  #shopify-section-{{ section.id }} .inline-card-container--overlay .card-content {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    z-index: 2;
  }

  /* Card Media Wrapper (Image or Video) */
  #shopify-section-{{ section.id }} .card-media-wrapper {
    width: 100%;
    position: relative;
    margin-bottom: 1.5rem;
  }

  #shopify-section-{{ section.id }} .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
  }

  #shopify-section-{{ section.id }} .card-video {
    width: 100%;
    aspect-ratio: 1.18;
    border-radius: 12px;
    overflow: hidden;
    background-color: #000;
  }

  #shopify-section-{{ section.id }} .card-video__native {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #shopify-section-{{ section.id }} .card-video__iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  #shopify-section-{{ section.id }} .card-media-placeholder {
    width: 100%;
    background-color: var(--color-bg-light, #f5f5f5);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #shopify-section-{{ section.id }} .card-media-placeholder .placeholder-svg {
    width: 60px;
    height: 60px;
    opacity: 0.5;
  }

  /* Card Content */
  #shopify-section-{{ section.id }} .card-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex-grow: 1;
  }

  #shopify-section-{{ section.id }} .card-title {
    margin: 0;
    line-height: 1.3;
    font-size: 36px;
  }

  #shopify-section-{{ section.id }} .card-description {
    margin: 0;
    line-height: 1.5;
    font-size: 20px;
  }
  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} .section__description {
      max-width: 960px;
      margin: 0 auto;
    }
  }

  /* Tablet Responsive */
  @media screen and (min-width: 750px) and (max-width: 1099px) {
    #shopify-section-{{ section.id }} .card-item {
      flex: 1 1 calc((100% / var(--cards-tablet)) - (var(--card-gap) * (var(--cards-tablet) - 1) / var(--cards-tablet)));
    }
  }

  /* Mobile Responsive - Stacked Vertically */
  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .inline-cards-content {
      border-radius: 20px;
    }

    #shopify-section-{{ section.id }} .section__header {
      padding: 2rem 2rem 0 2rem;
      margin-bottom: 2rem;
    }

    #shopify-section-{{ section.id }} .inline-cards-wrapper {
      padding: 0 2rem 2rem 2rem;
    }

    #shopify-section-{{ section.id }} .cards-container {
      flex-direction: column;
      gap: 1.5rem;
    }

    #shopify-section-{{ section.id }} .card-item {
      flex: none;
      width: 100%;
      min-width: unset;
    }

    #shopify-section-{{ section.id }} .card-media-wrapper {
      margin-bottom: 1rem;
    }

    #shopify-section-{{ section.id }} .card-content {
      gap: 1.75rem;
    }

    #shopify-section-{{ section.id }} .inline-card-container--overlay .card-content {
      padding: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    #shopify-section-{{ section.id }} .section__description {
      font-size: 16px;
    }
    #shopify-section-{{ section.id }} .section__title {
      font-size: 36px;
    }
    #shopify-section-{{ section.id }} .card-title {
      font-size: 32px;
    }
    #shopify-section-{{ section.id }} .card-description {
      font-size: 16px;
    }
  }

  /* Mobile carousel arrows - only when enabled */
  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .mobile-carousel-enabled .flickity-button {
      position: absolute;
      bottom: -2.125rem;
      top: auto;
      z-index: 10;
      width: 2.5rem;
      height: 2.5rem;
      border: 1px solid var(--color-border);
      background-color: var(--color-bg-light);
      border-radius: 50%;
      margin: 0rem;
      border: 1px solid;
      color: #000;
    }

    #shopify-section-{{ section.id }} .mobile-carousel-enabled .flickity-button:hover {
      background-color: var(--color-primary);
      border-color: var(--color-primary);
      color: var(--color-white);
    }

    #shopify-section-{{ section.id }} .mobile-carousel-enabled .flickity-prev-next-button.previous {
      right: 4rem;
      left: auto;
    }

    #shopify-section-{{ section.id }} .mobile-carousel-enabled .flickity-prev-next-button.next {
      right: 1rem;
    }

    #shopify-section-{{ section.id }} .mobile-carousel-enabled .flickity-slider > * {
      width: calc(100% / var(--grid-small-items)) !important;
    }

    #shopify-section-{{ section.id }} .mobile-carousel-enabled flickity-carousel > div {
      padding-bottom: 2rem;
    }
  }

  /* Mobile Styles */
  @media screen and (max-width: 749px) {
    /* Hide Desktop Layout ONLY when carousel is enabled */
    #shopify-section-{{ section.id }} .mobile-carousel-enabled .desktop-cards-wrapper {
      display: none;
    }

    /* Show Mobile Carousel */
    #shopify-section-{{ section.id }} .mobile-carousel-wrapper {
      display: block;
      margin: 0 0rem;
              padding-bottom: 2rem;
    }

    #shopify-section-{{ section.id }} .mobile-carousel {
      padding-left: 2rem;
    }

    #shopify-section-{{ section.id }} .mobile-card {
      padding: 0 0.5rem;
    }

    /* Flickity button positioning */
    #shopify-section-{{ section.id }} .flickity-button {
      position: absolute;
      bottom: -3.5rem;
      top: auto;
      z-index: 10;
      width: 2.5rem;
      height: 2.5rem;
      border-radius: 50%;
      background-color: var(--color-bg); 
      color: var(--color-text);
      border: 1px solid;
    }

    #shopify-section-{{ section.id }} .flickity-button:hover {
      background-color: var(--color-primary);
      border-color: var(--color-primary);
      color: var(--color-white);
    }

    #shopify-section-{{ section.id }} .flickity-prev-next-button.previous {
      right: 45px;
      left: auto;
    }

    #shopify-section-{{ section.id }} .flickity-prev-next-button.next {
      right: 0;
    }
    #shopify-section-{{ section.id }} .mobile-carousel-enabled .wrapper.section-padding{
      paddig-right: 0;
    }
  }
</style>

