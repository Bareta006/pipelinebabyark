<style>
.icon-slider-container {
  padding: 0 50px;
  position: relative;
}

.flickity-carousel {
  opacity: 0; /* Hide initially until heights are calculated */
  transition: opacity 0.3s ease;
}

.flickity-carousel.is-ready {
  opacity: 1;
}

.icon-slider-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  text-align: center;
  padding: 30px 15px;
  width: 100%;
  opacity: 0;
}

.icon-slider-block.is-visible {
  opacity: 1;
}

.icon-slider-block img {
  width: auto;
  height: 80px;
  object-fit: contain;
  margin-bottom: 20px;
}

.icon-slider-block .text-instead {
  font-size: var(--font-4);
  font-weight: bold;
  margin-bottom: 20px;
  line-height: 1.2;
  min-height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-slider-block h3 {
  font-size: 45px;
  margin: 0 0 15px;
  width: 100%;
  max-width: 800px;
}

.icon-slider-block p {
  font-size: 26px;
  line-height: 1.4;
  margin: 0;
  width: 100%;
  max-width: 600px;
}

.icon-slider-block.clickable {
  cursor: pointer;
  transition: opacity 0.2s ease-in-out;
}

.icon-slider-block.clickable:hover {
  opacity: 0.8;
}

.flickity-page-dots {
  bottom: 20px;
}

.flickity-page-dots .dot {
  width: 10px;
  height: 10px;
  margin: 0 6px;
  background-color: var(--text);
  opacity: 0.4;
}

.flickity-page-dots .dot.is-selected {
  opacity: 1;
  width: 20px;
  border-radius: 10px;
  transition: width 0.3s ease;
}

@media (max-width: 768px) {
  .icon-slider-container {
    padding: 0 15px;
  }
  
  .icon-slider-block {
    padding: 20px 10px;
  }
  
  .icon-slider-block img,
  .icon-slider-block .text-instead {
    height: 60px;
    min-height: 60px;
    margin-bottom: 15px;
    font-size: var(--font-3);
  }
  
  .icon-slider-block h3 {
    font-size: 30px;
    margin-bottom: 10px;
  }
  
  .icon-slider-block p {
    font-size: 16px;
  }
}
</style>

<section class="icon-slider-container {{ section.settings.bg }}" 
         data-section-id="{{ section.id }}" 
         data-section-type="icon-slider-text" 
         style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
  <div class="{{ section.settings.width }} section-padding">
    <div class="flickity-carousel"
         data-carousel 
         data-slideshow-autoplay="{{ section.settings.autoplay }}"
         data-slideshow-speed="{{ section.settings.autoplay_speed | times: 1000 }}">
      {% for block in section.blocks %}
        {%- assign has_link = block.settings.link -%}
        <div class="icon-slider-block{% if has_link != '' %} clickable{% endif %}" 
             data-carousel-slide
             {% if has_link != '' %}onclick="window.location.href='{{ block.settings.link }}'"{% endif %}>
          {% if block.settings.use_text_instead %}
            <div class="text-instead">{{ block.settings.text_instead }}</div>
          {% elsif block.settings.image %}
            <img src="{{ block.settings.image | img_url: '300x300' }}" 
                 alt="{{ block.settings.title | escape }}"
                 loading="lazy">
          {% endif %}
          
          {% if block.settings.title != blank %}
            <h3>{{ block.settings.title }}</h3>
          {% endif %}
          
          {% if block.settings.description != blank %}
            <p>{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% javascript %}
document.addEventListener('DOMContentLoaded', () => {
  const carousels = document.querySelectorAll('[data-carousel]');

  carousels.forEach((carousel) => {
    const autoplay = carousel.dataset.slideshowAutoplay === 'true';
    const speed = parseInt(carousel.dataset.slideshowSpeed, 10) || 5000;
    
    // Hide all slides initially
    const slides = carousel.querySelectorAll('.icon-slider-block');
    slides.forEach(slide => slide.style.opacity = '0');

    // Initialize Flickity
    const flkty = new Flickity(carousel, {
      cellAlign: 'center',
      contain: true,
      wrapAround: true,
      autoPlay: autoplay ? speed : false,
      prevNextButtons: true,
      pageDots: true,
      draggable: true,
      fade: true,
      adaptiveHeight: false,
      selectedAttraction: 0.2,
      friction: 0.8
    });

    // Function to calculate and set heights
    const calculateHeights = () => {
      let maxHeight = 0;
      slides.forEach(slide => {
        // Reset any previously set height
        slide.style.height = '';
        // Get the natural height
        const height = slide.offsetHeight;
        maxHeight = Math.max(maxHeight, height);
      });

      // Set the height on all slides and the carousel
      if (maxHeight > 0) {
        slides.forEach(slide => {
          slide.style.height = `${maxHeight}px`;
        });
        carousel.style.height = `${maxHeight}px`;
      }

      // Show the carousel and slides
      carousel.classList.add('is-ready');
      slides.forEach(slide => {
        slide.style.opacity = '1';
        slide.classList.add('is-visible');
      });

      // Update Flickity
      flkty.resize();
    };

    // Wait for images to load
    const images = carousel.querySelectorAll('img');
    let loadedImages = 0;
    const totalImages = images.length;

    if (totalImages > 0) {
      images.forEach(img => {
        if (img.complete) {
          loadedImages++;
          if (loadedImages === totalImages) {
            calculateHeights();
          }
        } else {
          img.onload = () => {
            loadedImages++;
            if (loadedImages === totalImages) {
              calculateHeights();
            }
          };
        }
      });
    } else {
      // If no images, calculate heights immediately
      calculateHeights();
    }

    // Recalculate on window resize
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(calculateHeights, 250);
    });
  });
});
{% endjavascript %}

