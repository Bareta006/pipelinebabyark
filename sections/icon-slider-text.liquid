<!-- sections/icon-slider-text.liquid -->

<style>
#shopify-section-{{ section.id }} .icon-slider-container {
  padding: 0 50px;
  position: relative;
}

#shopify-section-{{ section.id }} .icon-slider-flickity-carousel {
  opacity: 1; /* Show carousel from start */
}

#shopify-section-{{ section.id }} .icon-slider-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  text-align: center;
  padding: 30px 15px;
  width: 100%;
  opacity: 1; /* Show all slides from start */
}

#shopify-section-{{ section.id }} .icon-slider-block img {
  width: auto;
  height: 80px;
  object-fit: contain;
  margin-bottom: 20px;
}

#shopify-section-{{ section.id }} .icon-slider-block .text-instead {
  font-size: 45px;
  font-weight: bold;
  margin-bottom: 20px;
  line-height: 1.2;
  min-height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
}

#shopify-section-{{ section.id }} .icon-slider-block h3 {
  font-size: 45px;
  margin: 0 0 15px;
  width: 100%;
  max-width: 800px;
}

#shopify-section-{{ section.id }} .icon-slider-block p {
  font-size: 26px;
  line-height: 1.4;
  margin: 0;
  width: 100%;
  max-width: 600px;
}

#shopify-section-{{ section.id }} .icon-slider-block.clickable {
  cursor: pointer;
  transition: opacity 0.2s ease-in-out;
}

#shopify-section-{{ section.id }} .icon-slider-block.clickable:hover {
  opacity: 0.8;
}

#shopify-section-{{ section.id }} .flickity-page-dots {
  bottom: 20px;
}

#shopify-section-{{ section.id }} .flickity-page-dots .dot {
  width: 10px;
  height: 10px;
  margin: 0 6px;
  background-color: var(--text);
  opacity: 0.4;
}

#shopify-section-{{ section.id }} .flickity-page-dots .dot.is-selected {
  opacity: 1;
  width: 20px;
  border-radius: 10px;
  transition: width 0.3s ease;
}
#shopify-section-{{ section.id }} .flickity-button{
  display: none;
}
@media (max-width: 768px) {
  #shopify-section-{{ section.id }} .icon-slider-container {
    padding: 0 15px;
  }
  
  #shopify-section-{{ section.id }} .icon-slider-block {
    padding: 20px 10px;
  }
  
  #shopify-section-{{ section.id }} .icon-slider-block img,
  #shopify-section-{{ section.id }} .icon-slider-block .text-instead {
    height: 60px;
    min-height: 60px;
    margin-bottom: 15px;
    font-size: 30px;
  }
  
  #shopify-section-{{ section.id }} .icon-slider-block h3 {
    font-size: 30px;
    margin-bottom: 10px;
  }
  
  #shopify-section-{{ section.id }} .icon-slider-block p {
    font-size: 16px;
  }
}
</style>

<section class="icon-slider-container {{ section.settings.bg }}" 
         data-section-id="{{ section.id }}" 
         data-section-type="icon-slider-text" 
         style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
  <div class="{{ section.settings.width }} section-padding">
    <div class="icon-slider-flickity-carousel"
         data-icon-slider-carousel 
         data-slideshow-autoplay="{{ section.settings.autoplay }}"
         data-slideshow-speed="{{ section.settings.autoplay_speed | times: 1000 }}">
      {% for block in section.blocks %}
        {%- assign has_link = block.settings.link -%}
        <div class="icon-slider-block{% if has_link != blank %} clickable{% endif %}" 
             data-icon-slider-slide
             {% if has_link != blank %}onclick="window.location.href='{{ block.settings.link }}'"{% endif %}>
          {% if block.settings.use_text_instead %}
            <div class="text-instead">{{ block.settings.text_instead }}</div>
          {% elsif block.settings.image %}
            <img src="{{ block.settings.image | img_url: '300x300' }}" 
                 alt="{{ block.settings.title | escape }}"
                 loading="lazy">
          {% endif %}
          
          {% if block.settings.title != blank %}
            <h3>{{ block.settings.title }}</h3>
          {% endif %}
          
          {% if block.settings.description != blank %}
            <p>{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% javascript %}
document.addEventListener('DOMContentLoaded', () => {
  // Use a more specific selector that won't conflict with product galleries
  const iconSliders = document.querySelectorAll('[data-icon-slider-carousel]');
  
  if (!iconSliders.length) return;
  
  iconSliders.forEach((slider) => {
    const slides = slider.querySelectorAll('[data-icon-slider-slide]');
    if (!slides.length) return;
    
    const autoplay = slider.dataset.slideshowAutoplay === 'true';
    const speed = parseInt(slider.dataset.slideshowSpeed, 10) || 5000;
    
    // Create a new Flickity instance with a unique namespace
    const iconSliderFlickity = new Flickity(slider, {
      cellAlign: 'center',
      contain: true,
      wrapAround: true,
      autoPlay: autoplay ? speed : false,
      prevNextButtons: true,
      pageDots: true,
      draggable: true,
      fade: false,
      adaptiveHeight: false,
      selectedAttraction: 0.2,
      friction: 0.8,
      pauseAutoPlayOnHover: true
    });
    
    // Store the Flickity instance directly on the element to prevent conflicts
    slider._iconSliderFlickity = iconSliderFlickity;
    
    // Function to calculate and set heights
    const calculateHeights = () => {
      let maxHeight = 0;
      slides.forEach((slide) => {
        slide.style.height = '';
        const height = slide.offsetHeight;
        maxHeight = Math.max(maxHeight, height);
      });

      if (maxHeight > 0) {
        slides.forEach((slide) => {
          slide.style.height = `${maxHeight}px`;
          // Force slides to be visible
          slide.style.opacity = '1';
          slide.style.visibility = 'visible';
        });
        slider.style.height = `${maxHeight}px`;
      }

      if (slider._iconSliderFlickity) {
        slider._iconSliderFlickity.resize();
      }
    };

    // Calculate heights immediately
    calculateHeights();

    // Wait for images to load
    const images = slider.querySelectorAll('img');
    images.forEach((img) => {
      if (!img.complete) {
        img.onload = calculateHeights;
      }
    });

    // Recalculate on window resize
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(calculateHeights, 250);
    });
  });
});
{% endjavascript %}

