<!-- sections/icon-slider-text.liquid -->

<style>
.icon-slider-container {
  padding: 0 50px;
  position: relative;
}

.icon-slider-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  text-align: center;
  padding: 30px 15px;
  height: 100%;
  width: 100%;
}

.icon-slider-block img {
  width: auto;
  height: 80px;
  object-fit: contain;
  margin-bottom: 20px;
}

.icon-slider-block h3 {
  font-size: var(--font-3);
  margin: 0 0 15px;
  width: 100%;
  max-width: 800px;
}

.icon-slider-block p {
  font-size: var(--font-2);
  line-height: 1.4;
  margin: 0;
  width: 100%;
  max-width: 600px;
}

.icon-slider-block.clickable {
  cursor: pointer;
  transition: opacity 0.2s ease-in-out;
}

.icon-slider-block.clickable:hover {
  opacity: 0.8;
}

.flickity-page-dots {
  bottom: 20px;
}

.flickity-page-dots .dot {
  width: 10px;
  height: 10px;
  margin: 0 6px;
  background-color: var(--text);
  opacity: 0.4;
}

.flickity-page-dots .dot.is-selected {
  opacity: 1;
  width: 20px;
  border-radius: 10px;
  transition: width 0.3s ease;
}

@media (max-width: 768px) {
  .icon-slider-container {
    padding: 0 15px;
  }
  
  .icon-slider-block {
    padding: 20px 10px;
  }
  
  .icon-slider-block img {
    height: 60px;
    margin-bottom: 15px;
  }
  
  .icon-slider-block h3 {
    font-size: var(--font-2);
    margin-bottom: 10px;
  }
  
  .icon-slider-block p {
    font-size: var(--font-1);
  }
}
</style>

<section class="icon-slider-container {{ section.settings.bg }}" 
         data-section-id="{{ section.id }}" 
         data-section-type="icon-slider-text" 
         style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
  <div class="{{ section.settings.width }} section-padding">
    <div class="flickity-carousel"
         data-carousel 
         data-slideshow-autoplay="{{ section.settings.autoplay }}"
         data-slideshow-speed="{{ section.settings.autoplay_speed | times: 1000 }}">
      {% for block in section.blocks %}
        {% assign has_link = block.settings.link != blank %}
        <div class="icon-slider-block{% if has_link %} clickable{% endif %}" 
             data-carousel-slide
             {% if has_link %}onclick="window.location.href='{{ block.settings.link }}'"{% endif %}>
          {% if block.settings.image %}
            <img src="{{ block.settings.image | img_url: '300x300' }}" 
                 alt="{{ block.settings.title | escape }}"
                 loading="lazy">
          {% endif %}
          
          {% if block.settings.title != blank %}
            <h3>{{ block.settings.title }}</h3>
          {% endif %}
          
          {% if block.settings.description != blank %}
            <p>{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% javascript %}
document.addEventListener('DOMContentLoaded', () => {
  const carousels = document.querySelectorAll('[data-carousel]');

  carousels.forEach((carousel) => {
    const autoplay = carousel.dataset.slideshowAutoplay === 'true';
    const speed = parseInt(carousel.dataset.slideshowSpeed, 10) || 5000;

    new Flickity(carousel, {
      cellAlign: 'center',
      contain: true,
      wrapAround: true,
      autoPlay: autoplay ? speed : false,
      prevNextButtons: true,
      pageDots: true,
      draggable: true,
      fade: true,
      adaptiveHeight: false,
      selectedAttraction: 0.2,
      friction: 0.8
    });
  });
});
{% endjavascript %}

{% schema %}
{
  "name": "Icon Slider Text",
  "settings": [
    {
      "type": "select",
      "id": "bg",
      "label": "Background color",
      "default": "palette--light bg--neutral",
      "options": [
        { "value": "palette--light bg--neutral", "label": "Default"},
        { "value": "palette--light bg--accent", "label": "Light"},
        { "value": "palette--dark bg--invert", "label": "Dark"},
        { "value": "palette--dark bg--invert--accent", "label": "Dark accent"},
        { "value": "palette--bright bg--bright", "label": "Bright"},
        { "value": "palette--bright bg--bright--accent", "label": "Bright accent"}
      ]
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto-rotate slides",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "sec",
      "label": "Change slides every",
      "default": 5
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top", 
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper",
      "options": [
        { "value": "wrapper--none", "label": "Full width" },
        { "value": "wrapper--full", "label": "Full width padded" },
        { "value": "wrapper", "label": "Page width" },
        { "value": "wrapper--narrow", "label": "Page width narrow" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "icon_slider_block",
      "name": "Icon Slider Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL",
          "info": "Optional - entire slide will be clickable"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon Slider Text",
      "category": "Slider",
      "settings": {
        "bg": "palette--light bg--neutral",
        "autoplay": true,
        "autoplay_speed": 5,
        "padding_top": 40,
        "padding_bottom": 40,
        "width": "wrapper"
      },
      "blocks": [
        {
          "type": "icon_slider_block"
        }
      ]
    }
  ]
}
{% endschema %}