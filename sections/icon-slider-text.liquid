<!-- sections/icon-slider-text.liquid -->


<style>
/* Background color styles */
.bg--neutral { background-color: #f0f0f0; }
.bg--light { background-color: #ffffff; }
.bg--dark { background-color: #333333; }
 
/* Responsive text alignment */
#shopify-section-{{ section.id }} .icon-slider-container .icon-slider-block{
  text-align: {{ section.settings.text_alignment }};
}

@media (max-width: 768px) {
  #shopify-section-{{ section.id }} .icon-slider-container .icon-slider-block{
    text-align: {{ section.settings.text_alignment_mobile }};
  }
}
</style>

<div class="{{ section.settings.bg }} icon-slider-container" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  {% for block in section.blocks %}
    <div class="icon-slider-block">
      {% if block.settings.link != blank %}
        <a href="{{ block.settings.link }}" style="text-align: inherit;">
      {% endif %}
      
      {% if block.settings.image %}
        <img src="{{ block.settings.image | img_url: '300x300' }}" alt="{{ block.settings.title | escape }}">
      {% elsif block.settings.svg_icon != blank %}
        <div class="svg-icon" dangerouslySetInnerHTML={{ block.settings.svg_icon | json }}>
      {% endif %}
      
      {% if block.settings.title != blank %}
        <h2>{{ block.settings.title }}</h2>
      {% endif %}
      
      {% if block.settings.description != blank %}
        <p>{{ block.settings.description }}</p>
      {% endif %}
      
      {% if block.settings.link != blank %}
        </a>
      {% endif %}
    </div>
  {% endfor %}
</div>

{% javascript %}
    document.addEventListener('DOMContentLoaded', function() {
      var elem = document.querySelector('.icon-slider-container');
      theme.initializeSlider(elem, {
        cellAlign: 'left',
        contain: true,
        wrapAround: true,
        autoPlay: 3000
      });
    });
    {% endjavascript %}

    
{% schema %}
{
  "name": "Icon Slider Text",
  "settings": [
    {
        "type": "select",
        "id": "bg",
        "label": "Background color",
        "default": "palette--light bg--neutral",
        "options": [
          { "value": "palette--light bg--neutral", "label": "Default"},
          { "value": "palette--light bg--accent", "label": "Light"},
          { "value": "palette--dark bg--invert", "label": "Dark"},
          { "value": "palette--dark bg--invert--accent", "label": "Dark accent"},
          { "value": "palette--bright bg--bright", "label": "Bright"},
          { "value": "palette--bright bg--bright--accent", "label": "Bright accent"}
        ]
      },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top", 
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "text_alignment_mobile",
      "label": "Text Alignment (Mobile)",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "icon_slider_block",
      "name": "Icon Slider Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image or SVG"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default Icon Slider Text",
      "category": "Custom",
      "settings": {
        "bg": "bg--neutral",
        "padding_top": 20,
        "padding_bottom": 20
      },
      "blocks": [
        {
          "type": "icon_slider_block"
        }
      ]
    }
  ]
}
{% endschema %}