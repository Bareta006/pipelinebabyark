<!-- sections/icon-slider-text.liquid -->

<style>
#shopify-section-{{ section.id }} .icon-slider-container {
  padding: 0 50px;
  position: relative;
}

#shopify-section-{{ section.id }} .icon-text-flickity-carousel {
  opacity: 1; /* Show carousel from start */
}

#shopify-section-{{ section.id }} .icon-slider-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  text-align: center;
  padding: 30px 15px;
  width: 100%;
  opacity: 1; /* Show all slides from start */
}

#shopify-section-{{ section.id }} .icon-slider-block img {
  width: auto;
  height: 80px;
  object-fit: contain;
  margin-bottom: 20px;
}

#shopify-section-{{ section.id }} .icon-slider-block .text-instead {
  font-size: 45px;
  font-weight: bold;
  margin-bottom: 20px;
  line-height: 1.2;
  min-height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
}

#shopify-section-{{ section.id }} .icon-slider-block h3 {
  font-size: 45px;
  margin: 0 0 15px;
  width: 100%;
  max-width: 800px;
}

#shopify-section-{{ section.id }} .icon-slider-block p {
  font-size: 26px;
  line-height: 1.4;
  margin: 0;
  width: 100%;
  max-width: 600px;
}

#shopify-section-{{ section.id }} .icon-slider-block.clickable {
  cursor: pointer;
  transition: opacity 0.2s ease-in-out;
}

#shopify-section-{{ section.id }} .icon-slider-block.clickable:hover {
  opacity: 0.8;
}

#shopify-section-{{ section.id }} .icon-text-flickity-page-dots {
  bottom: 20px;
}

#shopify-section-{{ section.id }} .icon-text-flickity-page-dots .dot {
  width: 10px;
  height: 10px;
  margin: 0 6px;
  background-color: var(--text);
  opacity: 0.4;
}

#shopify-section-{{ section.id }} .icon-text-flickity-page-dots .dot.is-selected {
  opacity: 1;
  width: 20px;
  border-radius: 10px;
  transition: width 0.3s ease;
}

#shopify-section-{{ section.id }} .icon-text-flickity-button {
  display: none;
}

@media (max-width: 768px) {
  #shopify-section-{{ section.id }} .icon-slider-container {
    padding: 0 15px;
  }
  
  #shopify-section-{{ section.id }} .icon-slider-block {
    padding: 20px 10px;
  }
  
  #shopify-section-{{ section.id }} .icon-slider-block img,
  #shopify-section-{{ section.id }} .icon-slider-block .text-instead {
    height: 60px;
    min-height: 60px;
    margin-bottom: 15px;
    font-size: 30px;
  }
  
  #shopify-section-{{ section.id }} .icon-slider-block h3 {
    font-size: 30px;
    margin-bottom: 10px;
  }
  
  #shopify-section-{{ section.id }} .icon-slider-block p {
    font-size: 16px;
  }
}
</style>

<section class="icon-slider-container {{ section.settings.bg }}" 
         data-section-id="{{ section.id }}" 
         data-section-type="icon-slider-text" 
         style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
  <div class="{{ section.settings.width }} section-padding">
    <div class="icon-text-flickity-carousel"
         data-icon-text-carousel 
         data-slideshow-autoplay="{{ section.settings.autoplay }}"
         data-slideshow-speed="{{ section.settings.autoplay_speed | times: 1000 }}">
      {% for block in section.blocks %}
        {%- assign has_link = block.settings.link -%}
        <div class="icon-slider-block{% if has_link != blank %} clickable{% endif %}" 
             data-icon-text-slide
             {% if has_link != blank %}onclick="window.location.href='{{ block.settings.link }}'"{% endif %}>
          {% if block.settings.use_text_instead %}
            <div class="text-instead">{{ block.settings.text_instead }}</div>
          {% elsif block.settings.image %}
            <img src="{{ block.settings.image | img_url: '300x300' }}" 
                 alt="{{ block.settings.title | escape }}"
                 loading="lazy">
          {% endif %}
          
          {% if block.settings.title != blank %}
            <h3>{{ block.settings.title }}</h3>
          {% endif %}
          
          {% if block.settings.description != blank %}
            <p>{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% javascript %}
// Use an immediately invoked function expression (IIFE) to isolate the scope
(function() {
  // Create a custom event name for this specific section type
  const ICON_TEXT_INIT_EVENT = 'icon-text-slider:init';
  const ICON_TEXT_RESIZE_EVENT = 'icon-text-slider:resize';
  
  // Custom initialization function
  function initIconTextSliders() {
    // Use a unique selector for this specific carousel type
    const iconTextCarousels = document.querySelectorAll('[data-icon-text-carousel]');
    
    if (!iconTextCarousels.length) return;
    
    iconTextCarousels.forEach((carousel) => {
      // Check if already initialized to prevent double initialization
      if (carousel.classList.contains('icon-text-initialized')) return;
      
      const slides = carousel.querySelectorAll('[data-icon-text-slide]');
      const autoplay = carousel.dataset.slideshowAutoplay === 'true';
      const speed = parseInt(carousel.dataset.slideshowSpeed, 10) || 5000;
      
      // Create a unique namespace for this Flickity instance
      const iconTextFlickity = new Flickity(carousel, {
        cellAlign: 'center',
        contain: true,
        wrapAround: true,
        autoPlay: autoplay ? speed : false,
        prevNextButtons: true,
        pageDots: true,
        draggable: true,
        fade: false,
        adaptiveHeight: false,
        // Use different physics values to make it feel different
        selectedAttraction: 0.1,
        friction: 0.6,
        pauseAutoPlayOnHover: true,
        // Add a namespace to avoid conflicts with other Flickity instances
        namespace: 'icon-text-flickity'
      });
      
      // Mark as initialized
      carousel.classList.add('icon-text-initialized');
      
      // Store the Flickity instance on the element for future reference
      carousel.iconTextFlickity = iconTextFlickity;
      
      // Function to calculate and set heights
      const calculateHeights = () => {
        let maxHeight = 0;
        slides.forEach((slide) => {
          slide.style.height = '';
          const height = slide.offsetHeight;
          maxHeight = Math.max(maxHeight, height);
        });
        
        if (maxHeight > 0) {
          slides.forEach((slide) => {
            slide.style.height = `${maxHeight}px`;
          });
          carousel.style.height = `${maxHeight}px`;
          
          // Force slides to be visible
          slides.forEach((slide) => {
            slide.style.opacity = '1';
            slide.style.visibility = 'visible';
          });
        }
        
        if (carousel.iconTextFlickity) {
          carousel.iconTextFlickity.resize();
        }
      };
      
      // Calculate heights immediately
      calculateHeights();
      
      // Wait for images to load
      const images = carousel.querySelectorAll('img');
      images.forEach((img) => {
        if (!img.complete) {
          img.onload = calculateHeights;
        }
      });
      
      // Add a custom event listener for resize
      window.addEventListener(ICON_TEXT_RESIZE_EVENT, calculateHeights);
      
      // Handle window resize with a debounce
      let iconTextResizeTimer;
      window.addEventListener('resize', () => {
        clearTimeout(iconTextResizeTimer);
        iconTextResizeTimer = setTimeout(() => {
          // Dispatch our custom resize event
          window.dispatchEvent(new CustomEvent(ICON_TEXT_RESIZE_EVENT));
        }, 250);
      });
    });
  }
  
  // Initialize on DOMContentLoaded
  document.addEventListener('DOMContentLoaded', () => {
    // Dispatch our custom init event
    window.dispatchEvent(new CustomEvent(ICON_TEXT_INIT_EVENT));
  });
  
  // Listen for our custom init event
  window.addEventListener(ICON_TEXT_INIT_EVENT, initIconTextSliders);
  
  // Also initialize on Shopify section load events
  document.addEventListener('shopify:section:load', (event) => {
    const section = event.target;
    if (section && section.dataset.sectionType === 'icon-slider-text') {
      // Dispatch our custom init event
      window.dispatchEvent(new CustomEvent(ICON_TEXT_INIT_EVENT));
    }
  });
})();
{% endjavascript %}

