{%- comment -%}
  /sections/section-wide-card-hero.liquid
  
  Wide Card Hero Section
  - Desktop: Left side (image) and Right side (texts)
  - Mobile: Upper side (right on desktop) and Lower side (left on desktop)
  - Background image with border radius
{%- endcomment -%}

{%- liquid
  assign bg_image_desktop = section.settings.background_image_desktop | image_url: width: 2000 | default: 'none'
  assign bg_image_mobile = section.settings.background_image_mobile | image_url: width: 1000 | default: bg_image_desktop
-%}

<section class="section-wide-card-hero {{ section.settings.bg }}"
  data-section-id="{{ section.id }}"
  data-section-type="wide-card-hero"
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px; --bg-image-desktop: url('{{ bg_image_desktop }}'); --bg-image-mobile: url('{{ bg_image_mobile }}'); --border-radius: {{ section.settings.border_radius }}px;">
  
  <div class="{{ section.settings.width }} section-padding">
    <div class="wide-card-hero__container">
      
      {%- comment -%} Left Side - Image (Desktop) / Lower Side (Mobile) {%- endcomment -%}
      <div class="wide-card-hero__left">
        {% if section.settings.image != blank %}
          <div class="wide-card-hero__image wide-card-hero__image--{{ section.settings.image_alignment }}">
            {% render 'image', img_object: section.settings.image, sizes: '50vw', loading: 'lazy' %}
          </div>
        {% endif %}
      </div>

      {%- comment -%} Right Side - Texts (Desktop) / Upper Side (Mobile) {%- endcomment -%}
      <div class="wide-card-hero__right">
        {% if section.settings.text_1 != blank %}
          <div class="wide-card-hero__text-1"
               style="--text-1-size-desktop: {{ section.settings.text_1_size_desktop }}px; --text-1-size-mobile: {{ section.settings.text_1_size_mobile }}px; --text-1-color: {{ section.settings.text_1_color }}; --text-1-bg-color: {{ section.settings.text_1_bg_color }}; --text-1-padding: {{ section.settings.text_1_padding }}px;">
            {{ section.settings.text_1 }}
          </div>
        {% endif %}

        {% if section.settings.text_2 != blank %}
          <div class="wide-card-hero__text-2"
               style="--text-2-size-desktop: {{ section.settings.text_2_size_desktop }}px; --text-2-size-mobile: {{ section.settings.text_2_size_mobile }}px; --text-2-color: {{ section.settings.text_2_color }};">
            {{ section.settings.text_2 }}
          </div>
        {% endif %}

        {% if section.settings.text_3 != blank %}
          <div class="wide-card-hero__text-3"
               style="--text-3-size-desktop: {{ section.settings.text_3_size_desktop }}px; --text-3-size-mobile: {{ section.settings.text_3_size_mobile }}px; --text-3-color: {{ section.settings.text_3_color }};">
            {{ section.settings.text_3 }}
          </div>
        {% endif %}
      </div>

    </div>
  </div>
</section>

<style>
  
  #shopify-section-{{ section.id }} .section-wide-card-hero {
    background-image: var(--bg-image-desktop);
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    width: 100%;
    border-radius: var(--border-radius);
    overflow: hidden;
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .section-wide-card-hero {
      background-image: var(--bg-image-mobile);
    }
  }


  #shopify-section-{{ section.id }} .wide-card-hero__container {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    min-height: 400px;
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .wide-card-hero__container {
      flex-direction: column;
      min-height: auto;
    }
  }


  #shopify-section-{{ section.id }} .wide-card-hero__left {
    flex: 0 0 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .wide-card-hero__left {
      flex: 1 1 auto;
      order: 2;
      padding: 1.5rem;
    }
  }


  #shopify-section-{{ section.id }} .wide-card-hero__image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
  }

  #shopify-section-{{ section.id }} .wide-card-hero__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  
  #shopify-section-{{ section.id }} .wide-card-hero__image--left {
    justify-content: flex-start;
  }

  #shopify-section-{{ section.id }} .wide-card-hero__image--center {
    justify-content: center;
  }

  #shopify-section-{{ section.id }} .wide-card-hero__image--right {
    justify-content: flex-end;
  }


  #shopify-section-{{ section.id }} .wide-card-hero__right {
    flex: 0 0 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    gap: 1.5rem;
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .wide-card-hero__right {
      flex: 1 1 auto;
      order: 1;
      padding: 1.5rem;
      gap: 1rem;
    }
  }

  {%- comment -%} Text 1 Styles {%- endcomment -%}
  #shopify-section-{{ section.id }} .wide-card-hero__text-1 {
    font-size: var(--text-1-size-desktop);
    color: var(--text-1-color);
    background-color: var(--text-1-bg-color);
    padding: var(--text-1-padding);
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .wide-card-hero__text-1 {
      font-size: var(--text-1-size-mobile);
    }
  }

  {%- comment -%} Text 2 Styles {%- endcomment -%}
  #shopify-section-{{ section.id }} .wide-card-hero__text-2 {
    font-size: var(--text-2-size-desktop);
    color: var(--text-2-color);
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .wide-card-hero__text-2 {
      font-size: var(--text-2-size-mobile);
    }
  }

  {%- comment -%} Text 3 Styles {%- endcomment -%}
  #shopify-section-{{ section.id }} .wide-card-hero__text-3 {
    font-size: var(--text-3-size-desktop);
    color: var(--text-3-color);
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .wide-card-hero__text-3 {
      font-size: var(--text-3-size-mobile);
    }
  }
</style>

