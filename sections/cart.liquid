<!-- /sections/cart.liquid -->
{%- liquid
  assign hide_quantity = 'quantity--hide'
  if section.settings.cart_show_quantity
    assign hide_quantity = ''
  endif

  assign ajax_disable = false
  assign no_ajax_class = ''
  if settings.cart_style == 'compatible'
    assign ajax_disable = true
    assign no_ajax_class = 'no--ajax'
  endif

  assign full_init = ''
  assign empty_init = 'cart--hidden'
  if cart.item_count == 0
    assign empty_init = ''
    assign full_init = 'cart--hidden'
  endif
-%}
<style>
  .cart__template .cart-protection-container {
  grid-column: 1 / -1;  /* Span across all grid columns */
  margin: 10px 0;       /* Proper spacing */
  padding: 15px;        /* More breathing room */
  max-width: none;      /* Full width */
}
</style>
<div class="cart__template {{ no_ajax_class }} {{ hide_quantity }} {{ section.settings.bg }}"
  data-cart-message-container
  data-section-id="{{ section.id }}"
  data-section-type="cart"
  data-ajax-disable="{{ ajax_disable }}"
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
  {% comment %} Cart is empty {% endcomment %}
  <div class="cart__empty__page {{ empty_init }}" data-cart-empty>
    {% render 'cart-empty' %}
  </div>
  {% comment %} Cart is full {% endcomment %}
  <div class="{{ section.settings.width }} section-padding {{ full_init }}" data-cart-form data-cart-loading>
    <form action="{{ routes.cart_url }}" method="post" novalidate class="cart">
      <h3 class="cart__page__title body-size-8">{{ 'cart.general.title' | t }}</h3>
      <div class="errors" data-form-errors style="display: none;"></div>
      <div class="cart__items__grid cart__heading__wrapper">
        <div class="cart__heading__back">
          <a href="{{ settings.cart_continue_browsing | default: routes.all_products_collection_url }}" class="cart__heading cart__return">
            {% render 'icon-core-chevron-left' %}
            &nbsp;
            {{ 'cart.general.continue_browsing' | t }}
          </a>
        </div>
        <div class="cart__items__price">
          <p class="cart__heading">{{ 'cart.label.price' | t }}</p>
        </div>
        <div class="cart__items__quantity">
          <p class="cart__heading">{{ 'cart.label.quantity' | t }}</p>
        </div>
        <div class="cart__items__total">
          <p class="cart__heading">{{ 'cart.label.total' | t }}</p>
        </div>
      </div>
      <div class="template__cart__body">
        <div class="errors" data-form-errors style="display: none;"></div>
        <div data-cart-form>
            {% comment %}
              The following snippet is refreshed via ajax with
              cart.items.liquid when the quantity is adjusted.
            {% endcomment %}
            <div data-line-items>
            {% render 'cart-line-items' %}
            </div>
        </div>

        <div class="template__cart__footer{% if additional_checkout_buttons and section.settings.cart_show_additional_buttons %} template__cart__footer--additional_buttons{% endif %}" data-cart-bottom>

          <div class="cart__footer__notes">
            {%- if section.settings.cart_notes_enable -%}
              <label class="cart__notes__label" for="CartSpecialInstructions">{{ 'cart.general.note' | t }}</label>
              <textarea name="note" class="input-full" id="CartSpecialInstructions" data-cart-note>{{ cart.note }}</textarea>
            {%- endif -%}
          </div>
          <div class="cart__footer__shipping">
            {%- if section.settings.cart_shipping_enable -%}
              {% render 'cart-shipping-estimate' %}
            {%- endif -%}
          </div>
          <div class="cart__footer__total">
            {% if section.settings.cart_custom_message_enable and section.settings.cart_custom_message_text != blank %}
              <div class="cart__message cart__message--custom">
                {{ section.settings.cart_custom_message_text }}
              </div>
            {% endif %}

            <div class="cart__page__shipping">
              {%- if section.settings.show_free_shipping_message -%}
                {% render 'cart-shipping-message', message: section.settings.message, show_wheel: true %}
              {%- endif -%}
            </div>

            <div class="page__footer__subtotal" data-cart-subtotal>
              {% render 'cart-subtotal' %}
            </div>

            <p>
              <span class="cart__footer__label">{{ 'cart.general.subtotal' | t }}</span>
              <span class="cart__footer__value" data-cart-final>
                {{ cart.total_price | money_with_currency }}
              </span>
            </p>
            <p class="cart__footer__small">{{ 'cart.general.shipping_at_checkout' | t }}</p>
          </div>

          <div class="cart__page__upsell">
            {% render 'cart-upsell', section: section %}
          </div>

          <div class="cart__footer__checkout">
            <button type="submit" name="checkout" class="btn btn--primary btn--large checkout__button">
              {{ 'cart.general.checkout' | t }}
            </button>
          </div>

          <div class="cart__footer__update">
            <span class="cart__update" data-update-button>
              <span class="cart__update__icon">{% render 'icon-core-sync' %}</span>
              <button type="submit" name="update" class="text-link-bare">
                {{ 'cart.general.update' | t }}
              </button>
            </span>
          </div>

          {% if additional_checkout_buttons and section.settings.cart_show_additional_buttons %}
            <div class="cart__footer__additional">
              <div class="additional-checkout-buttons">
                {{ content_for_additional_checkout_buttons }}
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </form>
  </div>
</div>

<style>
/* Cart Page Upsell Styling */
.cart__page__upsell {
  margin: 20px 0;
  padding: 20px 0;
  border-top: 1px solid var(--color-border);
  /* Make upsell span full width of the grid */
  grid-column: 1 / -1;
  width: 100%;
  background-color: #F6F6F6;
}

.cart__page__upsell .cart-upsell {
  padding: 0;
}

.cart__page__upsell .cart-upsell__title {
  color: #000;
  font-size: 24px;
  font-weight: 400;
  margin-bottom: 15px;
  text-align: center;
  letter-spacing: -0.72px;
}

.cart__page__upsell .cart-upsell__carousel {
  overflow: hidden;
}

.cart__page__upsell .cart-upsell__slide {
  padding: 0 10px;
  width: calc(100% / 2.5); /* Larger items - show 2 per view on desktop */
}

.cart__page__upsell .cart-upsell-card {
  display: flex;
  background: #FFFFFF;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  border: 1px solid var(--color-border);
  min-height: 140px;
}

.cart__page__upsell .cart-upsell-card__image {
  width: 140px;
  height: 140px;
  flex-shrink: 0;
  padding: 8px;
}

.cart__page__upsell .cart-upsell-card__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 5px;
}

.cart__page__upsell .cart-upsell-card__content {
  flex: 1;
  padding: 16px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: stretch;
}

.cart__page__upsell .cart-upsell-card__title {
  margin: 0 0 8px;
  font-size: 20px;
  font-weight: 500;
  color: #000;
  line-height: 1.2;
}

.cart__page__upsell .cart-upsell-card__price {
  margin-bottom: 8px;
  font-size: 18px;
  font-weight: 500;
}

.cart__page__upsell .cart-upsell-card__price-sale {
  color: #D92121;
  font-weight: 600;
  margin-right: 5px;
}

.cart__page__upsell .cart-upsell-card__price-compare {
  text-decoration: line-through;
  color: #777;
}

.cart__page__upsell .cart-upsell-form {
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.cart__page__upsell .cart-upsell-form > div{
  width: 100%;
}
.cart__page__upsell .cart-upsell-form > div > form{
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap:30px;
}
.cart__page__upsell .cart-upsell-card__variants {
  width: 50%;
}

.cart__page__upsell .cart-upsell-card__variant-select {
  width: 100%;
  padding: 5px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 14px;
  height: 35px;
  margin-bottom: 0px;
}

.cart__page__upsell button.cart-upsell-card__button[name="add"] {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12px 20px;
  background-color: #000;
  color: #FFF;
  border: none;
  border-radius: 50px;
  font-size: 16px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  margin: 0;
  white-space: nowrap;
}

.cart__page__upsell button.cart-upsell-card__button[name="add"]:hover {
  background-color: #333;
  transform: translateY(-1px);
}

.cart__page__upsell button.cart-upsell-card__button:disabled {
  background-color: #999;
  cursor: not-allowed;
  transform: none;
}

/* Mobile styles */
@media (max-width: 768px) {
  .cart__page__upsell .cart-upsell__slide {
    width: calc(100% / 2.5); /* Show 1.5 items on tablet */
  }
  
  .cart__page__upsell .cart-upsell-card__title {
    font-size: 16px;
  }
  
  .cart__page__upsell .cart-upsell-card__price {
    font-size: 16px;
  }
  
  .cart__page__upsell .cart-upsell-card__image {
    width: 110px;
    height: 110px;
  }
  
  .cart__page__upsell .cart-upsell-card__content {
    padding: 12px;
  }
  
  .cart__page__upsell .cart-upsell-card__button {
    font-size: 14px;
    padding: 10px 16px;
  }
  .cart__page__upsell .cart-upsell-form > div > form{
    gap:3px;
    flex-direction: row;
    align-items: flex-start;
    justify-content: flex-start;
  }
  .cart__page__upsell .cart-upsell-card__variants {
    width: 50%;
}
.cart__page__upsell button.cart-upsell-card__button[name="add"]{
  padding: 8px 15px;
      width: 50%;
      font-size: 14px;
      font-weight: 400;

}
}

@media (max-width: 480px) {
  .cart__page__upsell .cart-upsell__slide {
    width: calc(100% / 1.1); /* Show 1.1 items on mobile */
  }
  
  .cart__page__upsell .cart-upsell__title {
    font-size: 20px;
    margin-bottom: 15px;
  }
  
  .cart__page__upsell .cart-upsell-card {
    min-height: 120px;
  }
  
  .cart__page__upsell .cart-upsell-card__image {
    width: 100px;
    height: 100px;
  }
}
</style>

{% schema %}
{
  "settings": [
    {
      "type": "checkbox",
      "id": "cart_shipping_enable",
      "label": "Enable shipping estimates",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "cart_show_quantity",
      "label": "Show quantity selectors",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "cart_notes_enable",
      "label": "Show cart notes",
      "default": false
    },
    {
      "type": "header",
      "content": "Free shipping message"
    },
    {
      "type": "checkbox",
      "id": "show_free_shipping_message",
      "label": "Show free shipping message",
      "default": false
    },
    {
      "type": "textarea",
      "id": "message",
      "label": "Message",
      "info": "Use ||amount|| to display progress towards free shipping.",
      "default": "Spend ||amount|| more for free shipping"
    },
    {
      "type": "header",
      "content": "Custom cart message"
    },
    {
      "type": "checkbox",
      "id": "cart_custom_message_enable",
      "label": "Show custom message",
      "default": false
    },
    {
      "type": "richtext",
      "id": "cart_custom_message_text",
      "label": "Message text",
      "default": "<p>Use code <strong>TENOFF</strong> at checkout for 10% off</p>"
    },
    {
      "type": "header",
      "content": "Upsell Products"
    },
    {
      "type": "checkbox",
      "id": "show_upsell_carousel",
      "label": "Show upsell products carousel",
      "default": false
    },
    {
      "type": "text",
      "id": "upsell_title",
      "label": "Upsell section title",
      "default": "You may also like"
    },
    {
      "type": "range",
      "id": "desktop_items_per_view",
      "min": 1,
      "max": 5,
      "step": 0.5,
      "label": "Desktop items per view",
      "default": 2
    },
    {
      "type": "range",
      "id": "tablet_items_per_view",
      "min": 1,
      "max": 4,
      "step": 0.5,
      "label": "Tablet items per view",
      "default": 1.5
    },
    {
      "type": "range",
      "id": "mobile_items_per_view",
      "min": 1,
      "max": 3,
      "step": 0.1,
      "label": "Mobile items per view",
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "enable_autoplay",
      "label": "Enable autoplay",
      "default": false
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 1,
      "max": 10,
      "step": 1,
      "label": "Autoplay speed (in seconds)",
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "enable_free_scroll",
      "label": "Enable free scroll",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_wrap_around",
      "label": "Enable wrap around",
      "default": false
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "select",
      "id": "cart_color_bg",
      "label": "Background color",
      "default": "palette--light bg--neutral",
      "options": [
        {
          "value": "palette--light bg--neutral",
          "label": "Default"
        },
        {
          "value": "palette--light bg--accent",
          "label": "Light"
        },
        {
          "value": "palette--dark bg--invert",
          "label": "Dark"
        },
        {
          "value": "palette--dark bg--invert--accent",
          "label": "Dark accent"
        },
        {
          "value": "palette--bright bg--bright",
          "label": "Bright"
        },
        {
          "value": "palette--bright bg--bright--accent",
          "label": "Bright accent"
        }
      ]
    },
    {
      "type": "header",
      "content": "Additional checkout buttons"
    },
    {
      "type": "paragraph",
      "content": "Not recommended for drawer style and popup style cart"
    },
    {
      "type": "checkbox",
      "id": "cart_show_additional_buttons",
      "label": "Show additional checkout options on cart",
      "info": "Move buttons for Apple Pay, Amazon Pay and PayPal express from the first step of the checkout to the cart.",
      "default": false
    },
    {
      "type": "select",
      "id": "bg",
      "label": "Background color",
      "default": "palette--light bg--neutral",
      "options": [
        { "value": "palette--light bg--neutral", "label": "Default"},
        { "value": "palette--light bg--accent", "label": "Light"},
        { "value": "palette--dark bg--invert", "label": "Dark"},
        { "value": "palette--dark bg--invert--accent", "label": "Dark accent"},
        { "value": "palette--bright bg--bright", "label": "Bright"},
        { "value": "palette--bright bg--bright--accent", "label": "Bright accent"}
      ]
    },
    {
      "type": "header",
      "content": "Section spacing"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper",
      "options": [
        { "value": "wrapper--full", "label": "Full width padded" },
        { "value": "wrapper", "label": "Page width" },
        { "value": "wrapper--narrow", "label": "Page width narrow" }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "upsell_product",
      "name": "Upsell Product",
      "limit": 5,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ]
}
{% endschema %}
