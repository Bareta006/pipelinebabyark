      <div
        class="{{ font_size_class }}"
        x-data="announcementSlider({{ section.settings.speed | times: 1000 }})"
        {%- if request.design_mode -%}
          @shopify:block:select="onBlockSelect"
          @shopify:block:deselect="onBlockDeselect"
          @shopify:section:unload="onUnload"
        {%- endif -%}
      >
        {{ bar_markup }}
      </div>
    {%- endif -%}

    {%- comment -%} Marquee {%- endcomment -%}
    {%- if section.settings.layout == 'marquee' -%}
      <div style="--items-spacing: {{ section.settings.text_size | times: 4 }}px">
        <div class="flex justify-between items-center text-center w-full">
          <div
            class="w-full px-[--outer] text-[0] overflow-hidden"
            data-ticker-frame
            x-data="announcementTicker({ stopClone: true })"
            {%- if request.design_mode -%}
              @shopify:block:select="onBlockSelect"
              @shopify:block:deselect="onBlockDeselect"
            {%- endif -%}
          >
            <div
              class="inline-flex items-center transition-opacity duration-500 ease-linear ticker--unloaded"
              data-ticker-scale
            >
              <div
                class="rte--lock-font rte--lock-size flex flex-row items-center w-max {{ font_size_class }}"
                data-ticker-text
              >
                {{ bar_markup }}
              </div>
            </div>
          </div>
        </div>
      </div>
    {%- endif -%}

    {%- comment -%} Section-level Countdown Timer {%- endcomment -%}
    {%- if section.settings.countdown_enabled -%}
      {%- liquid
        assign show_countdown = false
        if section.settings.countdown_date != blank
          assign date_parts = section.settings.countdown_date | split: ' '
          if date_parts.size == 2
            assign date_part = date_parts[0] | split: '-'
            assign time_part = date_parts[1] | split: ':'
            if date_part.size == 3 and time_part.size == 2
              assign year = date_part[0] | plus: 0
              assign month = date_part[1] | plus: 0
              assign day = date_part[2] | plus: 0
              assign hour = time_part[0] | plus: 0
              assign minute = time_part[1] | plus: 0
              if year > 2000 and month >= 1 and month <= 12 and day >= 1 and day <= 31 and hour >= 0 and hour <= 23 and minute >= 0 and minute <= 59
                assign show_countdown = true
              endif
            endif
          endif
        endif
      -%}
      
      {%- if show_countdown -%}
        <div class="announcement-countdown-wrapper">
          <div class="announcement-countdown" data-countdown-date="{{ section.settings.countdown_date }}">
            <span class="countdown-unit">
              <span class="countdown-number countdown-days">00</span>
              <span class="countdown-label">DAYS</span>
            </span>
            <span class="countdown-separator">:</span>
            <span class="countdown-unit">
              <span class="countdown-number countdown-hours">00</span>
              <span class="countdown-label">HRS</span>
            </span>
            <span class="countdown-separator">:</span>
            <span class="countdown-unit">
              <span class="countdown-number countdown-minutes">00</span>
              <span class="countdown-label">MIN</span>
            </span>
            <span class="countdown-separator">:</span>
            <span class="countdown-unit">
              <span class="countdown-number countdown-seconds">00</span>
              <span class="countdown-label">SEC</span>
            </span>
          </div>
        </div>
      {%- endif -%}
    {%- endif -%}
  </div>
{%- endif -%}

<style>
  /* Countdown wrapper - displays below announcement bar */
  .announcement-countdown-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0.75rem 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .announcement-countdown {
    display: inline-flex;
    align-items: center;
    gap: 0.5em;
    font-family: inherit;
  }
  
  .countdown-unit {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    gap: 0.2em;
    position: relative;
  }
  
  .countdown-number {
    display: inline-block;
    min-width: 2.2em;
    padding: 0.3em 0.5em;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 4px;
    font-size: 1.2em;
    font-weight: 800;
    line-height: 1;
    font-variant-numeric: tabular-nums;
    text-align: center;
    letter-spacing: 0.02em;
  }
  
  .countdown-label {
    font-size: 0.65em;
    font-weight: 600;
    letter-spacing: 0.08em;
    opacity: 0.85;
    text-transform: uppercase;
    line-height: 1;
    position: absolute;
    bottom: -2px;
  }
  
  .countdown-separator {
    font-size: 1.3em;
    font-weight: 700;
    opacity: 0.6;
    line-height: 1;
    margin: 0 -0.1em;
  }
  
  @media (max-width: 749px) {
    .announcement-countdown-wrapper {
      padding: 0.5rem 0.75rem;
    }
    
    .announcement-countdown {
      gap: 0.35em;
      padding-bottom: 3px;
    }
    
    .countdown-number {
      min-width: 2em;
      padding: 0.25em 0.4em;
      font-size: 1em;
    }
    
    .countdown-label {
      font-size: 0.6em;
      bottom: -2px;
    }
    
    .countdown-separator {
      font-size: 1.1em;
      margin: 0 -0.15em;
    }
  }
</style>

<script>
  // Announcement Bar Countdown Timer
  document.addEventListener('DOMContentLoaded', function() {
    const countdowns = document.querySelectorAll('.announcement-countdown');
    
    if (countdowns.length === 0) return;
    
    function updateCountdown(countdownEl) {
      const targetDate = countdownEl.getAttribute('data-countdown-date');
      if (!targetDate) return;
      
      const target = new Date(targetDate.replace(' ', 'T'));
      if (isNaN(target.getTime())) return;
      
      const daysEl = countdownEl.querySelector('.countdown-days');
      const hoursEl = countdownEl.querySelector('.countdown-hours');
      const minutesEl = countdownEl.querySelector('.countdown-minutes');
      const secondsEl = countdownEl.querySelector('.countdown-seconds');
      
      function calculate() {
        const now = new Date();
        const diff = target - now;
        
        if (diff <= 0) {
          // Countdown finished
          daysEl.textContent = '0';
          hoursEl.textContent = '0';
          minutesEl.textContent = '0';
          secondsEl.textContent = '0';
          return;
        }
        
        const days = Math.floor(diff / (1000 * 60 * 60 * 24));
        const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((diff % (1000 * 60)) / 1000);
        
        daysEl.textContent = String(days).padStart(2, '0');
        hoursEl.textContent = String(hours).padStart(2, '0');
        minutesEl.textContent = String(minutes).padStart(2, '0');
        secondsEl.textContent = String(seconds).padStart(2, '0');
      }
      
      // Initial calculation
      calculate();
      
      // Update every second
      setInterval(calculate, 1000);
    }
    
    // Initialize all countdowns
    countdowns.forEach(countdown => {
      updateCountdown(countdown);
    });
  });
</script>

