{% comment %}
  Fullwidth Card Slide Snippet
  
  Usage:
  {% render 'fullwidth-card-slide',
    desktop_image: desktop_image,
    mobile_image: mobile_image,
    desktop_video: desktop_video,
    mobile_video: mobile_video,
    title: title,
    description: description,
    title_color: title_color,
    description_color: description_color,
    button_text: button_text,
    button_link: button_link,
    button_style: button_style,
    button_color: button_color,
    text_align: text_align,
    title_size: title_size,
    description_size: description_size,
    overlay_opacity: overlay_opacity,
    overlay_color: overlay_color,
    enable_overlay_text: enable_overlay_text,
    height: height,
    block_id: block_id
  %}
{% endcomment %}

{%- liquid
  assign media_wh_ratio = desktop_video.aspect_ratio | default: desktop_image.aspect_ratio | default: 1
  assign mobile_media_wh_ratio = mobile_video.aspect_ratio | default: mobile_image.aspect_ratio | default: media_wh_ratio
-%}

<div class="fullwidth-card {{ height }} aspect-[--wh-ratio]" 
     data-block-id="{{ block_id }}"
     style="--wh-ratio: {{ media_wh_ratio }}; --mobile-wh-ratio: {{ mobile_media_wh_ratio }};">
  
  <!-- Video - Desktop (Priority over images) -->
  {% if desktop_video != blank %}
    <div class="fullwidth-card__video-desktop fullwidth-card__media-desktop">
      {{ desktop_video | video_tag: 
        controls: false, 
        autoplay: false, 
        loop: true, 
        muted: true,
        playsinline: true,
        preload: 'metadata',
        class: 'fullwidth-card__video'
      }}
    </div>
  {% elsif desktop_image != blank %}
    <!-- Background Image - Desktop -->
    <div class="fullwidth-card__image-desktop fullwidth-card__media-desktop">
      {% render 'image-parallax', img_object: desktop_image, img_object_mobile: mobile_image, frame_height_class: height, alt: 'Card Image' %}
    </div>
  {% endif %}
  
  <!-- Video - Mobile (Priority over images) -->
  {% if mobile_video != blank %}
    <div class="fullwidth-card__video-mobile fullwidth-card__media-mobile">
      {{ mobile_video | video_tag: 
        controls: false, 
        autoplay: false, 
        loop: true, 
        muted: true,
        playsinline: true,
        preload: 'metadata',
        class: 'fullwidth-card__video'
      }}
    </div>
  {% elsif desktop_video != blank %}
    <div class="fullwidth-card__video-mobile fullwidth-card__media-mobile">
      {{ desktop_video | video_tag: 
        controls: false, 
        autoplay: false, 
        loop: true, 
        muted: true,
        playsinline: true,
        preload: 'metadata',
        class: 'fullwidth-card__video'
      }}
    </div>
  {% elsif mobile_image != blank %}
    <!-- Background Image - Mobile -->
    <div class="fullwidth-card__image-mobile fullwidth-card__media-mobile">
      {% render 'image-parallax', img_object: mobile_image, frame_height_class: height, alt: 'Card Mobile Image' %}
    </div>
  {% elsif desktop_image != blank %}
    <div class="fullwidth-card__image-mobile fullwidth-card__media-mobile">
      {% render 'image-parallax', img_object: desktop_image, frame_height_class: height, alt: 'Card Image' %}
    </div>
  {% endif %}
  
  {% if desktop_image == blank and mobile_image == blank and desktop_video == blank and mobile_video == blank %}
    <div class="fullwidth-card__placeholder"></div>
  {% endif %}
  
  <!-- Image Overlay (unless overlay text is enabled) -->
  {% unless enable_overlay_text %}
    <div class="image-overlay" style="--bg:{{ overlay_color | default: '#000000' }}; opacity:{{ overlay_opacity | divided_by: 100.0 }};"></div>
  {% endunless %}
  
  <!-- Content -->
  <div class="hero__content__wrapper {{ text_align | default: 'align--bottom-left' }}">
    <div class="hero__content {% if enable_overlay_text %} backdrop--hero{% endif %}" {% if enable_overlay_text %} style="--bg: {{ overlay_color | default: '#000000' }}; --opacity: {{ overlay_opacity | divided_by: 100.0 }};"{% endif %}>
      
      {% if title != blank %}
        <h1 class="hero__title heading-size-{{ title_size | default: 9 }}" style="color: {{ title_color | default: '#ffffff' }};">
          {{ title }}
        </h1>
      {% endif %}
      
      {% if description != blank %}
        <div class="hero__description rte body-size-{{ description_size | default: 6 }}" style="color: {{ description_color | default: '#ffffff' }};">
          {{ description }}
        </div>
      {% endif %}
      
      {% if button_text != blank and button_link != blank %}
        <div class="hero__cta__wrapper">
          <a href="{{ button_link }}" class="hero__btn {{ button_color | default: 'btn--primary' }} {{ button_style | default: 'btn' }} btn--long">
            {{ button_text }}
          </a>
        </div>
      {% endif %}
      
    </div>
  </div>
  
</div> 