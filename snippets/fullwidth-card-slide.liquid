{% comment %}
  Fullwidth Card Slide Snippet
  
  Usage:
  {% render 'fullwidth-card-slide',
    desktop_image: desktop_image,
    mobile_image: mobile_image,
    desktop_video: desktop_video,
    mobile_video: mobile_video,
    badge_text: badge_text,
    badge_bg_color: badge_bg_color,
    badge_text_color: badge_text_color,
    title: title,
    description: description,
    title_color_desktop: title_color_desktop,
    title_color_mobile: title_color_mobile,
    description_color_desktop: description_color_desktop,
    description_color_mobile: description_color_mobile,
    button_text: button_text,
    button_link: button_link,
    button_style: button_style,
    button_color: button_color,
    text_align: text_align,
    title_size: title_size,
    description_size: description_size,
    overlay_opacity: overlay_opacity,
    overlay_color: overlay_color,
    enable_overlay_text: enable_overlay_text,
    full_height_content: full_height_content,
    content_bg_color: content_bg_color,
    mobile_card_bg_color: mobile_card_bg_color,
    height: height,
    block_id: block_id
  %}
{% endcomment %}

<div class="fullwidth-card {{ height }}" data-block-id="{{ block_id }}" {% if mobile_card_bg_color != blank %}style="--mobile-card-bg: {{ mobile_card_bg_color }};"{% endif %}>
  
  <!-- Background Video - Desktop (Priority over image) -->
  {% if desktop_video != blank %}
    <div class="fullwidth-card__video-desktop video-autoplay-wrapper">
      {{ desktop_video | video_tag: 
        autoplay: true,
        loop: true,
        muted: true,
        controls: false,
        playsinline: true,
        class: 'fullwidth-card__video',
        data-video-autoplay: ''
      }}
    </div>
  {% elsif desktop_image != blank %}
    <!-- Background Image - Desktop -->
    <div class="fullwidth-card__image-desktop">
      {% render 'image-parallax', img_object: desktop_image, img_object_mobile: mobile_image, frame_height_class: height, alt: 'Card Image' %}
    </div>
  {% endif %}
  
  <!-- Background Video/Image - Mobile -->
  {% if mobile_video != blank %}
    <div class="fullwidth-card__video-mobile video-autoplay-wrapper">
      {{ mobile_video | video_tag: 
        autoplay: true,
        loop: true,
        muted: true,
        controls: false,
        playsinline: true,
        class: 'fullwidth-card__video',
        data-video-autoplay: ''
      }}
    </div>
  {% elsif desktop_video != blank %}
    <div class="fullwidth-card__video-mobile video-autoplay-wrapper">
      {{ desktop_video | video_tag: 
        autoplay: true,
        loop: true,
        muted: true,
        controls: false,
        playsinline: true,
        class: 'fullwidth-card__video',
        data-video-autoplay: ''
      }}
    </div>
  {% elsif mobile_image != blank %}
    <div class="fullwidth-card__image-mobile">
      {% render 'image-parallax', img_object: mobile_image, frame_height_class: height, alt: 'Card Mobile Image' %}
    </div>
  {% elsif desktop_image != blank %}
    <div class="fullwidth-card__image-mobile">
      {% render 'image-parallax', img_object: desktop_image, frame_height_class: height, alt: 'Card Image' %}
    </div>
  {% endif %}
  
  {% if desktop_image == blank and mobile_image == blank and desktop_video == blank and mobile_video == blank %}
    <div class="fullwidth-card__placeholder {{ height }}"></div>
  {% endif %}
  
  <!-- Image Overlay (unless overlay text is enabled) -->
  {% unless enable_overlay_text %}
    <div class="image-overlay" style="--bg:{{ overlay_color | default: '#000000' }}; opacity:{{ overlay_opacity | divided_by: 100.0 }};"></div>
  {% endunless %}
  
  <!-- Content -->
  <div class="hero__content__wrapper {{ text_align | default: 'align--bottom-left' }}" 
       style="--title-color-desktop: {{ title_color_desktop | default: '#ffffff' }}; --title-color-mobile: {{ title_color_mobile | default: '#ffffff' }}; --desc-color-desktop: {{ description_color_desktop | default: '#ffffff' }}; --desc-color-mobile: {{ description_color_mobile | default: '#ffffff' }}; {% if mobile_card_bg_color != blank %}--mobile-card-bg: {{ mobile_card_bg_color }};{% endif %}">
    <div class="hero__content {% if enable_overlay_text %} backdrop--hero{% endif %} {% if full_height_content %}hero__content--full-height{% endif %}" 
         {% if enable_overlay_text %} style="--bg: {{ overlay_color | default: '#000000' }}; --opacity: {{ overlay_opacity | divided_by: 100.0 }};"{% elsif content_bg_color != blank %} style="background-color: {{ content_bg_color }};"{% endif %}>
      
      {% if badge_text != blank %}
        <div class="hero__badge" style="background-color: {{ badge_bg_color | default: '#000000' }}; color: {{ badge_text_color | default: '#ffffff' }};">
          {{ badge_text }}
        </div>
      {% endif %}
      
      {% if title != blank %}
        <h1 class="hero__title heading-size-{{ title_size | default: 9 }}" style="color: var(--title-color-desktop);">
          {{ title }}
        </h1>
      {% endif %}
      
      {% if description != blank %}
        <div class="hero__description rte body-size-{{ description_size | default: 6 }}" style="color: var(--desc-color-desktop);">
          {{ description }}
        </div>
      {% endif %}
      
      {% if button_text != blank and button_link != blank %}
        <div class="hero__cta__wrapper">
          <a href="{{ button_link }}" class="hero__btn {{ button_color | default: 'btn--primary' }} {{ button_style | default: 'btn' }} btn--long">
            {{ button_text }}
          </a>
        </div>
      {% endif %}
      
    </div>
  </div>
  
</div> 