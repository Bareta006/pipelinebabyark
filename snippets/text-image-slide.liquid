{% comment %}
  Text Image Slide Snippet
  
  Usage:
  {% render 'text-image-slide',
    slide_counter: slide_counter,
    total_slides: total_slides,
    slide_title: slide_title,
    slide_description: slide_description,
    slide_image: slide_image,
    slide_title_size: slide_title_size,
    slide_description_size: slide_description_size
  %}
{% endcomment %}

<div class="text-image-slide-container">
  
  <!-- Text Side -->
  <div class="slide-text-side">
    <div class="slide-counter">
      <span class="current-slide">{{ slide_counter }}</span> / <span class="total-slides">{{ total_slides }}</span>
    </div>
    
    {% if slide_title != blank %}
      <h3 class="slide-title heading-size-{{ slide_title_size }}">
        {{ slide_title }}
      </h3>
    {% endif %}
    
    {% if slide_description != blank %}
      <div class="slide-description rte body-size-{{ slide_description_size }}">
        {{ slide_description }}
      </div>
    {% endif %}
    
    <!-- Custom Navigation Arrows -->
    <div class="custom-arrows">
      <button class="custom-prev" aria-label="Previous slide">‹</button>
      <button class="custom-next" aria-label="Next slide">›</button>
    </div>
    
    <!-- Progress Bar -->
    <div class="slide-progress-bar">
      <div class="slide-progress-fill" data-slide-progress></div>
    </div>
  </div>
  
  <!-- Image Side -->
  <div class="slide-image-side">
    {% if slide_image != blank %}
      {%- capture image_sizes -%}
        (min-width: 990px) 50vw, 100vw
      {%- endcapture -%}
      
      {% render 'image',
        img_object: slide_image,
        alt: slide_title,
        class: 'slide-image',
        sizes: image_sizes,
        loading: 'lazy'
      %}
    {% else %}
      <div class="slide-image-placeholder">
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {% endif %}
  </div>
  
</div>

<style>
  .text-image-slide-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    min-height: 500px;
  }

  .slide-text-side {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 2rem;
  }

  .slide-counter {
    font-size: 1rem;
    font-weight: 500;
    opacity: 0.7;
    margin-bottom: 0.5rem;
  }

  .slide-title {
    margin: 0;
  }

  .slide-description {
    margin: 0;
  }

  .custom-arrows {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .custom-prev,
  .custom-next {
    width: 2.5rem;
    height: 2.5rem;
    border: 1px solid var(--color-border);
    background-color: var(--color-bg);
    border-radius: 50%;
    color: var(--color-text);
    font-size: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .custom-prev:hover,
  .custom-next:hover {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-white);
  }

  .slide-progress-bar {
    width: 100%;
    height: 4px;
    background-color: #e0e0e0;
    border-radius: 2px;
    overflow: hidden;
    margin-top: 1.5rem;
  }

  .slide-progress-fill {
    height: 100%;
    background-color: #333;
    border-radius: 2px;
    transition: width 0.3s ease;
    width: 0%;
  }

  .slide-image-side {
    position: relative;
    min-height: 400px;
  }

  .slide-image,
  .slide-image-placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }

  .slide-image-placeholder {
    background-color: var(--color-bg-light);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Mobile Styles */
  @media screen and (max-width: 749px) {
    .text-image-slide-container {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      min-height: auto;
    }

    .slide-text-side {
      order: 2;
      padding: 1.5rem 0;
    }

    .slide-image-side {
      order: 1;
      min-height: 250px;
    }
  }
</style> 