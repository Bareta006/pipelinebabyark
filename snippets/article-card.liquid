{% comment %}
  Article Card Snippet
  
  Accepts:
  - image: The main card image
  - logo: The logo to display under the image
  - text: Main text content
  - button_text: Text for the button
  - button_url: URL for the button
  - button_color: Button color class (e.g., btn--primary, btn--white, btn--black, btn--neutral)
  - button_style: Button style (e.g., btn, btn--outline)
{% endcomment %}

<div class="article-card">
  {% if image != blank %}
    <div class="article-card__image">
      {{ image | image_url: width: 600 | image_tag: loading: 'lazy', class: 'article-card__main-image' }}
    </div>
  {% endif %}
  
  {% if logo != blank %}
    <div class="article-card__logo">
      {{ logo | image_url: width: 120 | image_tag: loading: 'lazy', class: 'article-card__logo-image' }}
    </div>
  {% endif %}
  
  {% if text != blank %}
    <div class="article-card__text">
      {{ text }}
    </div>
  {% endif %}
  
  {% if button_text != blank and button_url != blank %}
    <div class="article-card__button">
      <a href="{{ button_url }}" class="{{ button_color | default: 'btn--primary' }} {{ button_style | default: 'btn' }}">
        {{ button_text }}
      </a>
    </div>
  {% endif %}
</div> 